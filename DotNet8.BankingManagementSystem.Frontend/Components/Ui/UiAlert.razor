@namespace DotNet8.BankingManagementSystem.Frontend.Components.Ui

<div class="@ComputedClass" role="alert">
    @if (Icon is not null)
    {
        <div class="ui-alert-icon">
            @Icon
        </div>
    }
    <div class="ui-alert-content">
        @if (Title is not null)
        {
            <div class="ui-alert-title">@Title</div>
        }
        <div class="ui-alert-description">
            @ChildContent
        </div>
    </div>
</div>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public RenderFragment? Icon { get; set; }
    [Parameter] public RenderFragment? Title { get; set; }
    [Parameter] public UiAlertVariant Variant { get; set; } = UiAlertVariant.Default;
    [Parameter] public string? Class { get; set; }

    private string ComputedClass => ClassNames.Merge(
        "alert shadow-sm",
        Variant switch
        {
            UiAlertVariant.Default => "alert-info",
            UiAlertVariant.Info => "alert-info",
            UiAlertVariant.Success => "alert-success",
            UiAlertVariant.Warning => "alert-warning",
            UiAlertVariant.Destructive => "alert-error",
            _ => "alert-info"
        },
        Class
    );
}

