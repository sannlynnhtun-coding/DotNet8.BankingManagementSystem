@namespace DotNet8.BankingManagementSystem.Frontend.Components.Ui

<span class="@ComputedClass">
    @ChildContent
</span>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public UiBadgeVariant Variant { get; set; } = UiBadgeVariant.Default;
    [Parameter] public string? Class { get; set; }

    private string ComputedClass => ClassNames.Merge(
        "badge",
        Variant switch
        {
            UiBadgeVariant.Default => "badge-primary",
            UiBadgeVariant.Secondary => "badge-secondary",
            UiBadgeVariant.Success => "badge-success",
            UiBadgeVariant.Warning => "badge-warning",
            UiBadgeVariant.Destructive => "badge-error",
            _ => "badge-primary"
        },
        Class
    );
}

