@page "/transaction/withdraw"

<div class="max-w-2xl mx-auto space-y-8 animate-in fade-in slide-in-from-bottom-4 duration-500">
    <!-- Header Section -->
    <div class="text-center space-y-2">
        <div class="inline-flex items-center justify-center p-3 bg-rose-50 text-rose-600 rounded-2xl shadow-sm mb-2">
            <i class="fa-solid fa-hand-holding-dollar text-2xl"></i>
        </div>
        <h1 class="text-3xl font-extrabold text-slate-900 tracking-tight">Withdraw Funds</h1>
        <p class="text-slate-500 max-w-sm mx-auto">Process a cash withdrawal from a customer account.</p>
    </div>

    <!-- Form Card -->
    <div class="card-lg">
        <EditForm Model="@_model" OnValidSubmit="OnValidSubmit">
            <div class="card-body space-y-6">
                <!-- Inputs Group -->
                <div class="space-y-4">
                    <div class="group">
                        <label class="block text-sm font-bold text-slate-700 mb-1.5 ml-1">Account Number</label>
                        <InputSelect @bind-Value="_model.AccountNo" class="search-input">
                            <option value="">Select account to withdraw from</option>
                            @if (_accountListResponseModel is not null && _accountListResponseModel.Data is not null)
                            {
                                string[] userCodes = _accountListResponseModel!.Data.Select(x => x.CustomerCode).ToArray();
                                @foreach (var item in _accountListResponseModel.Data
                                    .Where(x => !userCodes.Contains(x.AccountNo))
                                    .OrderBy(x => x.AccountId))
                                {
                                    <option value="@item.AccountNo">
                                        @item.AccountNo (@item.CustomerCode)
                                    </option>
                                }
                            }
                        </InputSelect>
                        <ValidationMessage For="@(() => _model.AccountNo)" class="text-xs text-rose-500 mt-1" />
                    </div>

                    <div class="group">
                        <label class="block text-sm font-bold text-slate-700 mb-1.5 ml-1">Withdrawal Amount (MMK)</label>
                        <InputNumber @bind-Value="_model.Balance" 
                                     class="search-input" 
                                     placeholder="0.00" />
                        <ValidationMessage For="@(() => _model.Balance)" class="text-xs text-rose-500 mt-1" />
                    </div>
                </div>

                <!-- Info Box -->
                <div class="bg-rose-50 rounded-xl p-4 flex gap-3 border border-rose-100">
                    <i class="fa-solid fa-triangle-exclamation text-rose-500 mt-0.5"></i>
                    <p class="text-xs text-rose-800 leading-relaxed font-medium">
                        Please verify the customer's identity and ensure sufficient balance is available before processing.
                    </p>
                </div>
            </div>

            <!-- Action Bar -->
            <div class="card-footer flex flex-col sm:flex-row gap-3 px-8 py-6 bg-slate-50">
                <a href="/report/transaction-history" 
                   class="btn btn-secondary flex-1 px-6 py-3 font-bold">
                    Cancel
                </a>
                <button type="submit" 
                        class="btn flex-[2] px-6 py-3 font-bold bg-rose-600 hover:bg-rose-700 text-white shadow-lg shadow-rose-200 transition-all duration-200 group">
                    Process Withdrawal
                    <i class="fa-solid fa-money-bill-wave ml-2 text-rose-300 group-hover:translate-y-1 transition-transform"></i>
                </button>
            </div>
        </EditForm>
    </div>
</div>
