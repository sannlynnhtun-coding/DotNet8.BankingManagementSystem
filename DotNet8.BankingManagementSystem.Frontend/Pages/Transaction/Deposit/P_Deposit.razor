@page "/transaction/deposit"

<div class="max-w-2xl mx-auto space-y-8 animate-in fade-in slide-in-from-bottom-2 duration-500">
    <div class="text-center">
        <h1 class="text-4xl font-black text-base-content tracking-tight text-success">Deposit</h1>
        <p class="text-base-content/60 mt-2 font-medium">Deposit funds into a verified account.</p>
    </div>

    <UiCard>
        <EditForm Model="@_model" OnValidSubmit="OnValidSubmit">
            <DataAnnotationsValidator />
            
            <div class="p-8 space-y-8">
                <div class="space-y-6">
                    <div class="form-control w-full">
                        <label class="label"><span class="label-text font-bold text-[10px] uppercase tracking-widest opacity-60">Account</span></label>
                        <InputSelect @bind-Value="_model.AccountNo" class="select select-bordered focus:select-success transition-all font-mono font-bold">
                            <option value="">Select account to deposit into</option>
                            @if (_accountListResponseModel is not null && _accountListResponseModel.Data is not null)
                            {
                                @foreach (var item in _accountListResponseModel.Data.OrderBy(x => x.AccountId))
                                {
                                    <option value="@item.AccountNo">@item.AccountNo (@item.CustomerName)</option>
                                }
                            }
                        </InputSelect>
                        
                        @if (!string.IsNullOrEmpty(_model.AccountNo))
                        {
                            <div class="mt-2 flex items-center gap-2 p-3 bg-base-200/50 rounded-lg animate-in fade-in slide-in-from-top-1 duration-300">
                                <div class="w-8 h-8 rounded-lg bg-success/10 text-success flex items-center justify-center">
                                    <i class="fa-solid fa-wallet text-[10px]"></i>
                                </div>
                                <div>
                                    <p class="text-[10px] font-black uppercase tracking-widest opacity-40">Current Liquidity</p>
                                    <p class="text-xs font-mono font-black">@(GetAccountBalance().ToString("N0")) <span class="opacity-40">MMK</span></p>
                                </div>
                            </div>
                        }
                        <ValidationMessage For="@(() => _model.AccountNo)" class="mt-1 text-[10px] text-error font-bold uppercase" />
                    </div>

                    <div class="form-control w-full">
                        <label class="label"><span class="label-text font-bold text-[10px] uppercase tracking-widest opacity-60">Amount (MMK)</span></label>
                        <InputNumber @bind-Value="_model.Balance" 
                                     class="input input-bordered focus:input-success transition-all font-mono font-bold" 
                                     placeholder="0.00" />
                        <ValidationMessage For="@(() => _model.Balance)" class="mt-1 text-[10px] text-error font-bold uppercase" />
                    </div>
                </div>

                <div class="alert alert-success shadow-sm bg-success/5 border-success/20">
                    <i class="fa-solid fa-shield-check text-success"></i>
                    <div>
                        <h4 class="font-bold text-xs uppercase tracking-wider">Security</h4>
                        <p class="text-[10px] opacity-70">Funds will be deposited instantly after authorization.</p>
                    </div>
                </div>
            </div>

            <div class="p-8 pt-0 flex items-center justify-end gap-4">
                <button type="button" class="btn btn-ghost" @onclick="@(() => NavigationManager.NavigateTo("/report/transaction-history"))">
                    Cancel
                </button>
                <button type="submit" class="btn btn-success text-success-content shadow-lg shadow-success/20">
                    Submit Deposit
                </button>
            </div>
        </EditForm>
    </UiCard>
</div>
