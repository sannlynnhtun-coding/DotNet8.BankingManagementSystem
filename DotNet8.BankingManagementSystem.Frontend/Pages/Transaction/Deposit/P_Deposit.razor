@page "/transaction/deposit"

<div class="max-w-2xl mx-auto space-y-8 animate-in fade-in slide-in-from-bottom-2 duration-500">
    <div class="space-y-2">
        <h1 class="text-2xl font-bold tracking-tight">Deposit Funds</h1>
        <p class="text-muted-foreground text-sm">Add balance to a customer account securely.</p>
    </div>

    <UiCard>
        <EditForm Model="@_model" OnValidSubmit="OnValidSubmit">
            <DataAnnotationsValidator />
            
            <div class="p-6 space-y-6">
                <!-- Inputs Group -->
                <div class="space-y-4">
                    <div class="space-y-2">
                        <UiLabel>Account Number</UiLabel>
                        <InputSelect @bind-Value="_model.AccountNo" class="ui-input">
                            <option value="">Select account to deposit into</option>
                            @if (_accountListResponseModel is not null && _accountListResponseModel.Data is not null)
                            {
                                string[] userCodes = _accountListResponseModel!.Data.Select(x => x.CustomerCode).ToArray();
                                @foreach (var item in _accountListResponseModel.Data
                                    .Where(x => !userCodes.Contains(x.AccountNo))
                                    .OrderBy(x => x.AccountId))
                                {
                                    <option value="@item.AccountNo">
                                        @item.AccountNo (@item.CustomerName)
                                    </option>
                                }
                            }
                        </InputSelect>
                        @if (!string.IsNullOrEmpty(_model.AccountNo))
                        {
                            <div class="mt-2 flex items-center gap-2 text-[11px] font-semibold text-muted-foreground animate-in fade-in slide-in-from-top-1 duration-300">
                                <i class="fa-solid fa-wallet opacity-50"></i>
                                Current Balance: <span class="text-foreground font-mono">@(GetAccountBalance().ToString("N0")) MMK</span>
                            </div>
                        }
                        <ValidationMessage For="@(() => _model.AccountNo)" class="text-[10px] text-destructive font-medium" />
                    </div>

                    <div class="space-y-2">
                        <UiLabel>Deposit Amount (MMK)</UiLabel>
                        <InputNumber @bind-Value="_model.Balance" 
                                     class="ui-input" 
                                     placeholder="0.00" />
                        <ValidationMessage For="@(() => _model.Balance)" class="text-[10px] text-destructive font-medium" />
                    </div>
                </div>

                <UiAlert Variant="UiAlertVariant.Info" Class="bg-emerald-500/5 border-emerald-500/10">
                    <i class="fa-solid fa-shield-halved text-emerald-600"></i>
                    <span class="text-xs font-medium text-emerald-900/80">Funds will be available immediately after processing. Verification may be required for large amounts.</span>
                </UiAlert>
            </div>

            <div class="flex items-center justify-end gap-3 p-6 pt-0">
                <UiButton Type="button" Variant="UiButtonVariant.Ghost" OnClick="@(() => NavigationManager.NavigateTo("/report/transaction-history"))">
                    Cancel
                </UiButton>
                <UiButton Type="submit" Variant="UiButtonVariant.Default" Class="bg-emerald-600 hover:bg-emerald-700 text-white border-0">
                    Confirm Deposit
                </UiButton>
            </div>
        </EditForm>
    </UiCard>
</div>
