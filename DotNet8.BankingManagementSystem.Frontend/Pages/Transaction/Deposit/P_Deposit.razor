@page "/transaction/deposit"

<div class="max-w-2xl mx-auto space-y-8 animate-in fade-in slide-in-from-bottom-4 duration-500">
    <!-- Header Section -->
    <div class="text-center space-y-2">
        <div class="inline-flex items-center justify-center p-3 bg-emerald-50 text-emerald-600 rounded-2xl shadow-sm mb-2">
            <i class="fa-solid fa-piggy-bank text-2xl"></i>
        </div>
        <h1 class="text-3xl font-extrabold text-slate-900 tracking-tight">Deposit Funds</h1>
        <p class="text-slate-500 max-w-sm mx-auto">Add balance to a customer account securely.</p>
    </div>

    <!-- Form Card -->
    <div class="card-lg">
        <EditForm Model="@_model" OnValidSubmit="OnValidSubmit">
            <div class="card-body space-y-6">
                <!-- Inputs Group -->
                <div class="space-y-4">
                    <div class="group">
                        <UiLabel>Account Number</UiLabel>
                        <InputSelect @bind-Value="_model.AccountNo" class="ui-input">
                            <option value="">Select account to deposit into</option>
                            @if (_accountListResponseModel is not null && _accountListResponseModel.Data is not null)
                            {
                                string[] userCodes = _accountListResponseModel!.Data.Select(x => x.CustomerCode).ToArray();
                                @foreach (var item in _accountListResponseModel.Data
                                    .Where(x => !userCodes.Contains(x.AccountNo))
                                    .OrderBy(x => x.AccountId))
                                {
                                    <option value="@item.AccountNo">
                                        @item.AccountNo (@item.CustomerName)
                                    </option>
                                }
                            }
                        </InputSelect>
                        @if (!string.IsNullOrEmpty(_model.AccountNo))
                        {
                            <div class="mt-2 flex items-center gap-2 text-xs font-semibold text-slate-500 animate-in fade-in slide-in-from-top-1 duration-300">
                                <i class="fa-solid fa-wallet text-slate-400"></i>
                                Current Balance: <span class="text-primary-600">@(GetAccountBalance().ToString("N0")) MMK</span>
                            </div>
                        }
                        <ValidationMessage For="@(() => _model.AccountNo)" class="text-xs text-rose-500 mt-1" />
                    </div>

                    <div class="group">
                        <UiLabel>Deposit Amount (MMK)</UiLabel>
                        <InputNumber @bind-Value="_model.Balance" 
                                     class="ui-input" 
                                     placeholder="0.00" />
                        <ValidationMessage For="@(() => _model.Balance)" class="text-xs text-rose-500 mt-1" />
                    </div>
                </div>

                <!-- Info Box -->
                <UiAlert Variant="UiAlertVariant.Success">
                    <Icon>
                        <i class="fa-solid fa-shield-check text-emerald-500"></i>
                    </Icon>
                    <ChildContent>
                        <p class="text-xs leading-relaxed font-medium">
                            Deposited funds will be available immediately after processing. Verification may be required for large amounts.
                        </p>
                    </ChildContent>
                </UiAlert>
            </div>

            <!-- Action Bar -->
            <div class="card-footer flex flex-col sm:flex-row gap-3 px-8 py-6 bg-slate-50">
                <UiButton Href="/report/transaction-history"
                          Variant="UiButtonVariant.Secondary"
                          Size="UiButtonSize.Lg"
                          Class="flex-1 px-6 font-bold">
                    Cancel
                </UiButton>
                <UiButton Type="submit"
                          Variant="UiButtonVariant.Default"
                          Size="UiButtonSize.Lg"
                          Class="flex-[2] px-6 font-bold bg-emerald-600 hover:bg-emerald-700 shadow-lg shadow-emerald-200 group">
                    Confirm Deposit
                    <i class="fa-solid fa-check-circle ml-2 text-emerald-300 group-hover:scale-110 transition-transform"></i>
                </UiButton>
            </div>
        </EditForm>
    </div>
</div>
