@page "/transaction/transfer"

<div class="max-w-2xl mx-auto space-y-8 animate-in fade-in slide-in-from-bottom-4 duration-500">
    <!-- Header Section -->
    <div class="text-center space-y-2">
        <div class="inline-flex items-center justify-center p-3 bg-primary-50 text-primary-600 rounded-2xl shadow-sm mb-2">
            <i class="fa-solid fa-money-bill-transfer text-2xl"></i>
        </div>
        <h1 class="text-3xl font-extrabold text-slate-900 tracking-tight">Transfer Balance</h1>
        <p class="text-slate-500 max-w-sm mx-auto">Move funds between accounts securely and instantly.</p>
    </div>

    <!-- Form Card -->
    <div class="card-lg">
        <EditForm Model="@reqModel" OnValidSubmit="OnValidSubmit">
            <div class="card-body space-y-6">
                <!-- Inputs Group -->
                <div class="space-y-4">
                    <div class="group">
                        <label class="block text-sm font-bold text-slate-700 mb-1.5 ml-1">From Account</label>
                        <InputSelect @bind-Value="reqModel.FromAccountNo" class="search-input">
                            <option value="">Select source account</option>
                            @if (_accountListResponseModel is not null && _accountListResponseModel.Data is not null)
                            {
                                @foreach (var item in _accountListResponseModel.Data.OrderBy(x => x.AccountId))
                                {
                                    <option value="@item.AccountNo">
                                        @item.AccountNo (@item.CustomerCode)
                                    </option>
                                }
                            }
                        </InputSelect>
                        <ValidationMessage For="@(() => reqModel.FromAccountNo)" class="text-xs text-rose-500 mt-1" />
                    </div>

                    <div class="group">
                        <label class="block text-sm font-bold text-slate-700 mb-1.5 ml-1">To Account</label>
                        <InputSelect @bind-Value="reqModel.ToAccountNo" class="search-input">
                            <option value="">Select destination account</option>
                            @if (_accountListResponseModel is not null && _accountListResponseModel.Data is not null)
                            {
                                var filteredAccounts = _accountListResponseModel.Data
                                    .Where(x => x.AccountNo != reqModel.FromAccountNo)
                                    .OrderBy(x => x.AccountId);

                                foreach (var item in filteredAccounts)
                                {
                                    <option value="@item.AccountNo">
                                        @item.AccountNo (@item.CustomerCode)
                                    </option>
                                }
                            }
                        </InputSelect>
                        <ValidationMessage For="@(() => reqModel.ToAccountNo)" class="text-xs text-rose-500 mt-1" />
                    </div>

                    <div class="group">
                        <label class="block text-sm font-bold text-slate-700 mb-1.5 ml-1">Amount (MMK)</label>
                        <InputNumber @bind-Value="reqModel.Amount" 
                                     class="search-input" 
                                     placeholder="0.00" />
                        <ValidationMessage For="@(() => reqModel.Amount)" class="text-xs text-rose-500 mt-1" />
                    </div>
                </div>

                <!-- Warning/Information -->
                <div class="bg-amber-50 rounded-xl p-4 flex gap-3 border border-amber-100">
                    <i class="fa-solid fa-circle-info text-amber-500 mt-0.5"></i>
                    <p class="text-xs text-amber-800 leading-relaxed font-medium">
                        Please ensure the recipient's account number is correct. Transfers are irreversible once completed.
                    </p>
                </div>
            </div>

            <!-- Action Bar -->
            <div class="card-footer flex flex-col sm:flex-row gap-3 px-8 py-6 bg-slate-50">
                <a href="/report/transaction-history" 
                   class="btn btn-secondary flex-1 px-6 py-3 font-bold">
                    Cancel
                </a>
                <button type="submit" 
                        class="btn btn-primary flex-[2] px-6 py-3 font-bold shadow-lg shadow-primary-200 group">
                    Send Funds
                    <i class="fa-solid fa-paper-plane ml-2 text-primary-300 group-hover:translate-x-1 group-hover:-translate-y-1 transition-transform"></i>
                </button>
            </div>
        </EditForm>
    </div>
</div>
