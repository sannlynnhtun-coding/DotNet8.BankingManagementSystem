@page "/transaction/transfer"

<div class="max-w-2xl mx-auto space-y-8 animate-in fade-in slide-in-from-bottom-2 duration-500">
    <div class="text-center">
        <h1 class="text-4xl font-black text-base-content tracking-tight text-primary">Transfer</h1>
        <p class="text-base-content/60 mt-2 font-medium">Transfer funds between verified accounts.</p>
    </div>

    <UiCard>
        <EditForm Model="@reqModel" OnValidSubmit="OnValidSubmit">
            <DataAnnotationsValidator />
            
            <div class="p-8 space-y-8">
                <!-- Inputs Group -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <div class="form-control w-full">
                        <label class="label"><span class="label-text font-bold text-[10px] uppercase tracking-widest opacity-60">From Account</span></label>
                        <InputSelect @bind-Value="reqModel.FromAccountNo" class="select select-bordered focus:select-primary transition-all font-mono font-bold">
                            <option value="">Select source</option>
                            @if (_accountListResponseModel is not null && _accountListResponseModel.Data is not null)
                            {
                                @foreach (var item in _accountListResponseModel.Data.OrderBy(x => x.AccountId))
                                {
                                    <option value="@item.AccountNo">@item.AccountNo (@item.CustomerName)</option>
                                }
                            }
                        </InputSelect>
                        
                        @if (!string.IsNullOrEmpty(reqModel.FromAccountNo))
                        {
                            <div class="mt-2 flex items-center gap-2 p-3 bg-base-200/50 rounded-lg animate-in fade-in slide-in-from-top-1 duration-300">
                                <div class="w-8 h-8 rounded-lg bg-primary/10 text-primary flex items-center justify-center">
                                    <i class="fa-solid fa-wallet text-[10px]"></i>
                                </div>
                                <div>
                                    <p class="text-[10px] font-black uppercase tracking-widest opacity-40">Current Balance</p>
                                    <p class="text-xs font-mono font-black">@(GetFromAccountBalance().ToString("N0")) <span class="opacity-40">MMK</span></p>
                                </div>
                            </div>
                        }
                        <ValidationMessage For="@(() => reqModel.FromAccountNo)" class="mt-1 text-[10px] text-error font-bold uppercase" />
                    </div>

                    <div class="form-control w-full">
                        <label class="label"><span class="label-text font-bold text-[10px] uppercase tracking-widest opacity-60">To Account</span></label>
                        <InputSelect @bind-Value="reqModel.ToAccountNo" class="select select-bordered focus:select-primary transition-all font-mono font-bold">
                            <option value="">Select destination</option>
                            @if (_accountListResponseModel is not null && _accountListResponseModel.Data is not null)
                            {
                                var filteredAccounts = _accountListResponseModel.Data
                                    .Where(x => x.AccountNo != reqModel.FromAccountNo)
                                    .OrderBy(x => x.AccountId);

                                foreach (var item in filteredAccounts)
                                {
                                    <option value="@item.AccountNo">@item.AccountNo (@item.CustomerName)</option>
                                }
                            }
                        </InputSelect>
                        
                        @if (!string.IsNullOrEmpty(reqModel.ToAccountNo))
                        {
                            <div class="mt-2 flex items-center gap-2 p-3 bg-base-200/50 rounded-lg animate-in fade-in slide-in-from-top-1 duration-300">
                                <div class="w-8 h-8 rounded-lg bg-secondary/10 text-secondary flex items-center justify-center">
                                    <i class="fa-solid fa-wallet text-[10px]"></i>
                                </div>
                                <div>
                                    <p class="text-[10px] font-black uppercase tracking-widest opacity-40">Current Balance</p>
                                    <p class="text-xs font-mono font-black">@(GetToAccountBalance().ToString("N0")) <span class="opacity-40">MMK</span></p>
                                </div>
                            </div>
                        }
                        <ValidationMessage For="@(() => reqModel.ToAccountNo)" class="mt-1 text-[10px] text-error font-bold uppercase" />
                    </div>

                    <div class="form-control w-full md:col-span-2">
                        <label class="label"><span class="label-text font-bold text-[10px] uppercase tracking-widest opacity-60">Amount (MMK)</span></label>
                        <InputNumber @bind-Value="reqModel.Amount" 
                                     class="input input-bordered focus:input-primary transition-all font-mono font-bold" 
                                     placeholder="0.00" />
                        <ValidationMessage For="@(() => reqModel.Amount)" class="mt-1 text-[10px] text-error font-bold uppercase" />
                    </div>
                </div>

                <div class="alert alert-warning shadow-sm bg-warning/5 border-warning/20">
                    <i class="fa-solid fa-shield-halved text-warning"></i>
                    <div>
                        <h4 class="font-bold text-xs uppercase tracking-wider">Finalize</h4>
                        <p class="text-[10px] opacity-70">Fund transfer is instant and cannot be reversed.</p>
                    </div>
                </div>
            </div>

            <div class="p-8 pt-0 flex items-center justify-end gap-4">
                <button type="button" class="btn btn-ghost" @onclick="@(() => NavigationManager.NavigateTo("/report/transaction-history"))">
                    Cancel
                </button>
                <button type="submit" class="btn btn-primary shadow-lg shadow-primary/20">
                    Submit Transfer
                </button>
            </div>
        </EditForm>
    </UiCard>
</div>
