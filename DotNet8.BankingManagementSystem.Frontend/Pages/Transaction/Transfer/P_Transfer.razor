@page "/transaction/transfer"

<div class="max-w-2xl mx-auto space-y-8 animate-in fade-in slide-in-from-bottom-2 duration-500">
    <div class="space-y-2">
        <h1 class="text-2xl font-bold tracking-tight">Transfer Balance</h1>
        <p class="text-muted-foreground text-sm">Move funds between accounts securely and instantly.</p>
    </div>

    <UiCard>
        <EditForm Model="@reqModel" OnValidSubmit="OnValidSubmit">
            <DataAnnotationsValidator />
            
            <div class="p-6 space-y-6">
                <!-- Inputs Group -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="space-y-2">
                        <UiLabel>From Account</UiLabel>
                        <InputSelect @bind-Value="reqModel.FromAccountNo" class="ui-input">
                            <option value="">Select source</option>
                            @if (_accountListResponseModel is not null && _accountListResponseModel.Data is not null)
                            {
                                @foreach (var item in _accountListResponseModel.Data.OrderBy(x => x.AccountId))
                                {
                                    <option value="@item.AccountNo">
                                        @item.AccountNo (@item.CustomerCode)
                                    </option>
                                }
                            }
                        </InputSelect>
                        @if (!string.IsNullOrEmpty(reqModel.FromAccountNo))
                        {
                            <div class="mt-2 flex items-center gap-2 text-[11px] font-semibold text-muted-foreground animate-in fade-in slide-in-from-top-1 duration-300">
                                <i class="fa-solid fa-wallet opacity-50"></i>
                                Available: <span class="text-foreground font-mono">@(GetFromAccountBalance().ToString("N0")) MMK</span>
                            </div>
                        }
                        <ValidationMessage For="@(() => reqModel.FromAccountNo)" class="text-[10px] text-destructive font-medium" />
                    </div>

                    <div class="space-y-2">
                        <UiLabel>To Account</UiLabel>
                        <InputSelect @bind-Value="reqModel.ToAccountNo" class="ui-input">
                            <option value="">Select destination</option>
                            @if (_accountListResponseModel is not null && _accountListResponseModel.Data is not null)
                            {
                                var filteredAccounts = _accountListResponseModel.Data
                                    .Where(x => x.AccountNo != reqModel.FromAccountNo)
                                    .OrderBy(x => x.AccountId);

                                foreach (var item in filteredAccounts)
                                {
                                    <option value="@item.AccountNo">
                                        @item.AccountNo (@item.CustomerCode)
                                    </option>
                                }
                            }
                        </InputSelect>
                        @if (!string.IsNullOrEmpty(reqModel.ToAccountNo))
                        {
                            <div class="mt-2 flex items-center gap-2 text-[11px] font-semibold text-muted-foreground animate-in fade-in slide-in-from-top-1 duration-300">
                                <i class="fa-solid fa-wallet opacity-50"></i>
                                Current: <span class="text-foreground font-mono">@(GetToAccountBalance().ToString("N0")) MMK</span>
                            </div>
                        }
                        <ValidationMessage For="@(() => reqModel.ToAccountNo)" class="text-[10px] text-destructive font-medium" />
                    </div>

                    <div class="space-y-2 md:col-span-2">
                        <UiLabel>Amount (MMK)</UiLabel>
                        <InputNumber @bind-Value="reqModel.Amount" 
                                     class="ui-input" 
                                     placeholder="0.00" />
                        <ValidationMessage For="@(() => reqModel.Amount)" class="text-[10px] text-destructive font-medium" />
                    </div>
                </div>

                <UiAlert Variant="UiAlertVariant.Warning" Class="bg-amber-500/5 border-amber-500/10">
                    <i class="fa-solid fa-triangle-exclamation text-amber-600"></i>
                    <span class="text-xs font-medium text-amber-900/80">Please ensure the recipient's account number is correct. Transfers are irreversible once completed.</span>
                </UiAlert>
            </div>

            <div class="flex items-center justify-end gap-3 p-6 pt-0">
                <UiButton Type="button" Variant="UiButtonVariant.Ghost" OnClick="@(() => NavigationManager.NavigateTo("/report/transaction-history"))">
                    Cancel
                </UiButton>
                <UiButton Type="submit" Variant="UiButtonVariant.Default">
                    Send Funds
                </UiButton>
            </div>
        </EditForm>
    </UiCard>
</div>
