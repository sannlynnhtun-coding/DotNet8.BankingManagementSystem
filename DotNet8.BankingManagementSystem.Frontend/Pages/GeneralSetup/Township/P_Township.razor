@page "/general-setup/township"
@{
    int count = 0;
}

@if (_model is not null && _model.Data is not null)
{
    <div class="space-y-6 animate-in fade-in slide-in-from-bottom-2 duration-500">
        <UiPageHeader Title="Townships" Subtitle="Manage your geographic distribution and township codes.">
            <Actions>
                <div class="flex items-center gap-2">
                    <UiButton Variant="UiButtonVariant.Default" Size="UiButtonSize.Sm" OnClick="@(() => NavigationManager.NavigateTo("/general-setup/township/create"))">
                        <i class="fa-solid fa-plus mr-2 opacity-70"></i>
                        New Township
                    </UiButton>
                    <GenerateButton OnClick="Generate" />
                </div>
            </Actions>
        </UiPageHeader>

        <UiCard>
            <div class="p-6 border-b border-border bg-muted/5">
                <div class="flex flex-col md:flex-row gap-4 items-center justify-between">
                    <div class="relative w-full md:w-96 group">
                        <i class="fa-solid fa-magnifying-glass absolute left-3 top-1/2 -translate-y-1/2 text-muted-foreground text-xs"></i>
                        <input type="search" 
                               class="ui-input pl-9 h-10 text-xs" 
                               placeholder="Search townships..."/>
                    </div>
                </div>
            </div>

            <div class="p-0 overflow-auto">
                <table class="ui-table">
                    <thead class="ui-table-header">
                        <tr class="ui-table-row">
                            <th class="ui-table-head w-16 text-center">#</th>
                            <th class="ui-table-head w-32">Township Code</th>
                            <th class="ui-table-head">Township Name</th>
                            <th class="ui-table-head w-32">State Code</th>
                            <th class="ui-table-head text-right pr-6">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in _model.Data)
                        {
                            <tr class="ui-table-row group">
                                <td class="ui-table-cell text-center text-xs text-muted-foreground font-mono">
                                    @(++count + ((_model.PageSetting.PageNo - 1) * _model.PageSetting.PageSize))
                                </td>
                                <td class="ui-table-cell">
                                    <span class="ui-badge ui-badge-secondary font-mono text-[10px] uppercase tracking-wider px-2 py-0.5">
                                        @item.TownshipCode
                                    </span>
                                </td>
                                <td class="ui-table-cell text-xs font-semibold">@item.TownshipName</td>
                                <td class="ui-table-cell">
                                    <span class="text-[10px] font-bold text-muted-foreground uppercase">@item.StateCode</span>
                                </td>
                                <td class="ui-table-cell text-right pr-6">
                                    <div class="flex items-center justify-end gap-1">
                                        <UiButton Variant="UiButtonVariant.Ghost" Size="UiButtonSize.Icon" 
                                                  OnClick="@(() => NavigationManager.NavigateTo($"/general-setup/township/edit/{item.TownshipCode}"))"
                                                  Class="h-8 w-8 text-muted-foreground hover:text-foreground">
                                            <i class="fa-solid fa-pen-to-square text-xs"></i>
                                        </UiButton>
                                        <UiButton Variant="UiButtonVariant.Ghost" Size="UiButtonSize.Icon" 
                                                  OnClick="() => Delete(item.TownshipCode)"
                                                  Class="h-8 w-8 text-muted-foreground hover:text-destructive">
                                            <i class="fa-solid fa-trash text-xs"></i>
                                        </UiButton>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="p-4 border-t border-border flex flex-col sm:flex-row items-center justify-between gap-4 bg-muted/10">
                <div class="text-[11px] text-muted-foreground font-medium">
                    Showing page <span class="text-foreground font-bold">@_model.PageSetting.PageNo</span> of <span class="text-foreground font-bold">@_model.PageSetting.PageCount</span>
                </div>
                <UiPagination PageNo="@(_model.PageSetting.PageNo)" 
                              PageCount="@(_model.PageSetting.PageCount)" 
                              SelectedChanged="PageChanged" />
            </div>
        </UiCard>
    </div>
}
