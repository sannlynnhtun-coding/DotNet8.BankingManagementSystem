@page "/general-setup/township"
@{
    int count = 0;
}

@if (_model is not null && _model.Data is not null)
{
    <div class="page animate-in fade-in slide-in-from-bottom-4 duration-500">
        <!-- Page Header -->
        <div class="page-header">
            <div>
                <h1 class="page-title">Townships</h1>
                <p class="page-subtitle">Manage your geographic distribution and township codes.</p>
            </div>
            
            <div class="flex items-center gap-3">
                <NavLink href="general-setup/township/create" 
                         @onclick="() => InjectService.IntervalLoading()"
                         class="btn btn-primary group">
                    <i class="fa-solid fa-plus mr-2 text-primary-200 group-hover:text-white transition-colors"></i>
                    New Township
                </NavLink>
                <GenerateButton OnClick="Generate" />
            </div>
        </div>

        <!-- Filters/Search Card -->
        <div class="card card-body-sm">
            <div class="flex flex-col md:flex-row gap-4 items-center justify-between">
                <div class="relative w-full md:w-96 group">
                    <span class="absolute inset-y-0 left-0 pl-3.5 flex items-center pointer-events-none">
                        <i class="fa-solid fa-magnifying-glass text-slate-400 group-focus-within:text-primary-500 transition-colors"></i>
                    </span>
                    <input type="search" 
                           class="search-input" 
                           placeholder="Search townships..."/>
                </div>
                
                <div class="flex items-center gap-2 text-sm text-slate-500">
                    <span>Showing <b>@_model.Data.Count</b> results</span>
                </div>
            </div>
        </div>

        <!-- Data Table Card -->
        <div class="table-card">
            <div class="overflow-x-auto">
                <table class="table">
                    <thead>
                        <tr class="table-head-row">
                            <th class="table-th w-16">#</th>
                            <th class="table-th">Township Code</th>
                            <th class="table-th">Township Name</th>
                            <th class="table-th">State Code</th>
                            <th class="table-th text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-100">
                        @foreach (var item in _model.Data)
                        {
                            <tr class="table-row group">
                                <td class="table-td text-sm text-slate-500">
                                    @(++count + ((_model.PageSetting.PageNo - 1) * _model.PageSetting.PageSize))
                                </td>
                                <td class="table-td">
                                    <span class="badge">@item.TownshipCode</span>
                                </td>
                                <td class="table-td text-sm font-medium text-slate-900">@item.TownshipName</td>
                                <td class="table-td text-sm text-slate-600">@item.StateCode</td>
                                <td class="table-td text-right">
                                    <div class="action-cell">
                                        <a href=@($"/general-setup/township/edit/{item.TownshipCode}") 
                                           class="action-btn action-btn-edit"
                                           title="Edit">
                                            <i class="fa-solid fa-pen-to-square"></i>
                                        </a>
                                        <button type="button" 
                                                class="action-btn action-btn-delete"
                                                @onclick="() => Delete(item.TownshipCode)"
                                                title="Delete">
                                            <i class="fa-solid fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <div class="card-footer flex flex-col sm:flex-row items-center justify-between gap-4">
                <div class="text-sm text-slate-500">
                    Page <b>@_model.PageSetting.PageNo</b> of <b>@_model.PageSetting.PageCount</b>
                </div>
                <TPagination PageNo="@(_model.PageSetting.PageNo)" 
                               PageCount="@(_model.PageSetting.PageCount)" 
                               SelectedChanged="PageChanged" />
            </div>
        </div>
    </div>
}
