@page "/general-setup/township/edit/{TownshipCode}"

@if (_model is not null)
{
    <div class="max-w-xl mx-auto space-y-8 animate-in fade-in slide-in-from-bottom-2 duration-500">
        <div class="space-y-2">
            <h1 class="text-2xl font-bold tracking-tight">Edit Township</h1>
            <p class="text-muted-foreground text-sm">Update geographic information for <span class="font-mono font-bold text-foreground">@TownshipCode</span>.</p>
        </div>

        <UiCard>
            <EditForm Model="@_model" OnValidSubmit="OnValidSubmit">
                <DataAnnotationsValidator />
                
                <div class="p-6 space-y-6">
                    <!-- Inputs Group -->
                    <div class="grid grid-cols-1 gap-4">
                        <div class="space-y-2">
                            <UiLabel>Township Code</UiLabel>
                            <div class="ui-input bg-muted/50 text-muted-foreground cursor-not-allowed select-none flex items-center px-3 h-10 rounded-md border border-input text-sm font-mono">
                                @_model.TownshipCode
                            </div>
                        </div>

                        <div class="space-y-2">
                            <UiLabel>Township Name</UiLabel>
                            <InputText @bind-Value="_model.TownshipName" 
                                       class="ui-input" 
                                       placeholder="e.g. Kamayut" />
                            <ValidationMessage For="@(() => _model.TownshipName)" class="text-[10px] text-destructive font-medium" />
                        </div>

                        <div class="space-y-2">
                            <UiLabel>State Code</UiLabel>
                            <InputText @bind-Value="_model.StateCode" 
                                       class="ui-input" 
                                       placeholder="e.g. MM-01" />
                            <ValidationMessage For="@(() => _model.StateCode)" class="text-[10px] text-destructive font-medium" />
                        </div>
                    </div>
                </div>

                <div class="flex items-center justify-end gap-3 p-6 pt-0">
                    <UiButton Type="button" Variant="UiButtonVariant.Ghost" OnClick="@(() => NavigationManager.NavigateTo("/general-setup/township"))">
                        Cancel
                    </UiButton>
                    <UiButton Type="submit" Variant="UiButtonVariant.Default">
                        Save Changes
                    </UiButton>
                </div>
            </EditForm>
        </UiCard>
    </div>
}
