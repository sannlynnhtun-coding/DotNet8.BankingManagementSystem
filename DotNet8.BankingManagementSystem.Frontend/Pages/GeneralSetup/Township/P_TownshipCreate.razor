@page "/general-setup/township/create"

<div class="max-w-xl mx-auto space-y-8 animate-in fade-in slide-in-from-bottom-2 duration-500">
    <div class="space-y-2">
        <h1 class="text-2xl font-bold tracking-tight">Create Township</h1>
        <p class="text-muted-foreground text-sm">Define a new township and associate it with a state.</p>
    </div>

    <UiCard>
        <EditForm Model="@_model" OnValidSubmit="OnValidSubmit">
            <DataAnnotationsValidator />
            
            <div class="p-6 space-y-6">
                <!-- Inputs Group -->
                <div class="grid grid-cols-1 gap-4">
                    <div class="space-y-2">
                        <UiLabel>Township Code</UiLabel>
                        <InputText @bind-Value="_model.TownshipCode" 
                                   class="ui-input" 
                                   placeholder="e.g. TS-001" />
                        <ValidationMessage For="@(() => _model.TownshipCode)" class="text-[10px] text-destructive font-medium" />
                    </div>

                    <div class="space-y-2">
                        <UiLabel>Township Name</UiLabel>
                        <InputText @bind-Value="_model.TownshipName" 
                                   class="ui-input" 
                                   placeholder="e.g. Kamayut" />
                        <ValidationMessage For="@(() => _model.TownshipName)" class="text-[10px] text-destructive font-medium" />
                    </div>

                    <div class="space-y-2">
                        <UiLabel>Associated State</UiLabel>
                        <InputSelect @bind-Value="_model.StateCode" class="ui-input">
                            <option value="">Select assigned state</option>
                            @if (_stateListResponseModel is not null && _stateListResponseModel.Data is not null)
                            {
                                @foreach (var item in _stateListResponseModel.Data)
                                {
                                    <option value="@item.StateCode">@item.StateName (@item.StateCode)</option>
                                }
                            }
                        </InputSelect>
                        <ValidationMessage For="@(() => _model.StateCode)" class="text-[10px] text-destructive font-medium" />
                    </div>
                </div>
            </div>

            <div class="flex items-center justify-end gap-3 p-6 pt-0">
                <UiButton Type="button" Variant="UiButtonVariant.Ghost" OnClick="@(() => NavigationManager.NavigateTo("/general-setup/township"))">
                    Cancel
                </UiButton>
                <UiButton Type="submit" Variant="UiButtonVariant.Default">
                    Create Township
                </UiButton>
            </div>
        </EditForm>
    </UiCard>
</div>
