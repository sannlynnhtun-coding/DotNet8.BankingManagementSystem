@page "/general-setup/township/create"

<div class="max-w-2xl mx-auto space-y-8 animate-in fade-in slide-in-from-bottom-4 duration-500">
    <!-- Header Section -->
    <div class="text-center space-y-2">
        <div class="inline-flex items-center justify-center p-3 bg-primary-50 text-primary-600 rounded-2xl shadow-sm mb-2">
            <i class="fa-solid fa-city text-2xl"></i>
        </div>
        <h1 class="text-3xl font-extrabold text-slate-900 tracking-tight">Create Township</h1>
        <p class="text-slate-500 max-w-sm mx-auto">Define a new township and associate it with a state.</p>
    </div>

    <!-- Form Card -->
    <div class="card-lg">
        <EditForm Model="@_model" OnValidSubmit="OnValidSubmit">
            <div class="card-body space-y-6">
                <!-- Inputs Group -->
                <div class="space-y-4">
                    <div class="group">
                        <UiLabel>Township Code</UiLabel>
                        <InputText @bind-Value="_model.TownshipCode" 
                                   class="ui-input" 
                                   placeholder="e.g. TS-001" />
                        <ValidationMessage For="@(() => _model.TownshipCode)" class="text-xs text-rose-500 mt-1" />
                    </div>

                    <div class="group">
                        <UiLabel>Township Name</UiLabel>
                        <InputText @bind-Value="_model.TownshipName" 
                                   class="ui-input" 
                                   placeholder="e.g. Kamayut" />
                        <ValidationMessage For="@(() => _model.TownshipName)" class="text-xs text-rose-500 mt-1" />
                    </div>

                    <div class="group">
                        <UiLabel>Associated State</UiLabel>
                        <InputSelect @bind-Value="_model.StateCode" class="ui-input">
                            <option value="">Select assigned state</option>
                            @if (_stateListResponseModel is not null && _stateListResponseModel.Data is not null)
                            {
                                @foreach (var item in _stateListResponseModel.Data)
                                {
                                    <option value="@item.StateCode">@item.StateName (@item.StateCode)</option>
                                }
                            }
                        </InputSelect>
                    </div>
                </div>
            </div>

            <!-- Action Bar -->
            <div class="card-footer flex flex-col sm:flex-row gap-3 px-8 py-6 bg-slate-50">
                <UiButton Href="/general-setup/township"
                          Variant="UiButtonVariant.Secondary"
                          Size="UiButtonSize.Lg"
                          Class="flex-1 px-6 font-bold">
                    Cancel
                </UiButton>
                <UiButton Type="submit"
                          Variant="UiButtonVariant.Default"
                          Size="UiButtonSize.Lg"
                          Class="flex-[2] px-6 font-bold shadow-lg shadow-primary-200 group">
                    Create Township
                    <i class="fa-solid fa-plus-circle ml-2 text-primary-300 group-hover:rotate-90 transition-transform"></i>
                </UiButton>
            </div>
        </EditForm>
    </div>
</div>
