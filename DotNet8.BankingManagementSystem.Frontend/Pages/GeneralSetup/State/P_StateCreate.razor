@page "/general-setup/state/create"

<div class="max-w-2xl mx-auto space-y-8 animate-in fade-in slide-in-from-bottom-4 duration-500">
    <!-- Header Section -->
    <div class="text-center space-y-2">
        <div class="inline-flex items-center justify-center p-3 bg-primary-50 text-primary-600 rounded-2xl shadow-sm mb-2">
            <i class="fa-solid fa-map-location-dot text-2xl"></i>
        </div>
        <h1 class="text-3xl font-extrabold text-slate-900 tracking-tight">Create State</h1>
        <p class="text-slate-500 max-w-sm mx-auto">Define a new geographic state or region in the system.</p>
    </div>

    <!-- Form Card -->
    <div class="card-lg">
        <EditForm Model="@_model">
            <div class="card-body space-y-6">
                <!-- Inputs Group -->
                <div class="space-y-4">
                    <div class="group">
                        <label class="block text-sm font-bold text-slate-700 mb-1.5 ml-1">State Code</label>
                        <InputText @bind-Value="_model.StateCode" 
                                   class="search-input" 
                                   placeholder="e.g. MM-01" />
                        <ValidationMessage For="@(() => _model.StateCode)" class="text-xs text-rose-500 mt-1" />
                    </div>

                    <div class="group">
                        <label class="block text-sm font-bold text-slate-700 mb-1.5 ml-1">State Name</label>
                        <InputText @bind-Value="_model.StateName" 
                                   class="search-input" 
                                   placeholder="e.g. Yangon" />
                        <ValidationMessage For="@(() => _model.StateName)" class="text-xs text-rose-500 mt-1" />
                    </div>
                </div>
            </div>

            <!-- Action Bar -->
            <div class="card-footer flex flex-col sm:flex-row gap-3 px-8 py-6 bg-slate-50">
                <a href="/general-setup/state" 
                   class="btn btn-secondary flex-1 px-6 py-3 font-bold">
                    Cancel
                </a>
                <button type="submit" 
                        @onclick="OnValidSubmit"
                        class="btn btn-primary flex-[2] px-6 py-3 font-bold shadow-lg shadow-primary-200 group">
                    Create State
                    <i class="fa-solid fa-plus-circle ml-2 text-primary-300 group-hover:rotate-90 transition-transform"></i>
                </button>
            </div>
        </EditForm>
    </div>
</div>
