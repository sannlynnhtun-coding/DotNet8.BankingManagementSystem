@page "/"
@inject NavigationManager NavigationManager
@inject ApiService ApiService

<PageTitle>Dashboard | IBanking</PageTitle>

@if (IsLoading && Banks.Count == 0)
{
    <div class="flex items-center justify-center min-h-[400px]">
        <div class="flex flex-col items-center gap-4">
            <div class="animate-spin rounded-full h-8 w-8 border-t-2 border-b-2 border-primary"></div>
            <p class="text-muted-foreground text-sm font-medium">Gathering financial insights...</p>
        </div>
    </div>
}
else
{
    <div class="space-y-8 animate-in fade-in slide-in-from-bottom-2 duration-500">
        <!-- Dashboard Header & Filters -->
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-6">
            <div>
                <h1 class="text-4xl font-black text-base-content tracking-tight">Dashboard</h1>
                <p class="text-base-content/60 mt-1 font-medium">Network performance and real-time activity.</p>
            </div>
            
            <div class="flex flex-col sm:flex-row gap-3 w-full md:w-auto p-2 bg-base-100 rounded-2xl shadow-sm border border-base-300">
                <select class="select select-bordered select-sm w-full md:w-auto"
                        @onchange="OnBankChanged">
                    <option value="">All Banks</option>
                    @foreach (var bank in Banks)
                    {
                        <option value="@bank.BankCode">@bank.BankName</option>
                    }
                </select>
                <select class="select select-bordered select-sm w-full md:w-auto @(string.IsNullOrEmpty(SelectedBankCode) ? "opacity-50" : "")"
                        @onchange="OnBranchChanged" disabled="@(string.IsNullOrEmpty(SelectedBankCode))">
                    <option value="">All Branches</option>
                    @foreach (var branch in Branches)
                    {
                        <option value="@branch.BranchCode">@branch.BranchName</option>
                    }
                </select>
                <UiButton Variant="UiButtonVariant.Ghost" Size="UiButtonSize.Sm" OnClick="LoadDashboardData">
                    <i class="fa-solid fa-rotate mr-2"></i>
                    Refresh
                </UiButton>
            </div>
        </div>

        <!-- KPI Stats Cards (daisyUI Stats) -->
        <div class="stats stats-vertical lg:stats-horizontal shadow-sm border border-base-300 w-full bg-base-100">
            <div class="stat">
                <div class="stat-figure text-primary">
                    <i class="fa-solid fa-vault text-2xl"></i>
                </div>
                <div class="stat-title font-bold uppercase tracking-widest text-[10px]">Network Balance</div>
                <div class="stat-value text-primary text-2xl">@TotalBalance.ToString("N0")</div>
                <div class="stat-desc font-bold text-primary/60">MMK Total</div>
            </div>
            
            <div class="stat">
                <div class="stat-figure text-secondary">
                    <i class="fa-solid fa-id-card-clip text-2xl"></i>
                </div>
                <div class="stat-title font-bold uppercase tracking-widest text-[10px]">Active Accounts</div>
                <div class="stat-value text-secondary text-2xl">@TotalAccounts.ToString("N0")</div>
                <div class="stat-desc font-bold text-secondary/60">Verified Accounts</div>
            </div>
            
            <div class="stat">
                <div class="stat-figure text-emerald-500">
                    <i class="fa-solid fa-user-group text-2xl"></i>
                </div>
                <div class="stat-title font-bold uppercase tracking-widest text-[10px]">Unique Customers</div>
                <div class="stat-value text-emerald-500 text-2xl">@TotalCustomers.ToString("N0")</div>
                <div class="stat-desc font-bold text-emerald-500/60">Individual Clients</div>
            </div>
            
            <div class="stat">
                <div class="stat-figure text-amber-500">
                    <i class="fa-solid fa-receipt text-2xl"></i>
                </div>
                <div class="stat-title font-bold uppercase tracking-widest text-[10px]">Today's Activity</div>
                <div class="stat-value text-amber-500 text-2xl">@RecentTransactionsCount.ToString("N0")</div>
                <div class="stat-desc font-bold text-amber-500/60">Recent Transactions</div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Recent Transactions Table -->
            <UiCard Class="lg:col-span-2">
                <UiCardHeader>
                    <div class="flex justify-between items-center">
                        <div>
                            <h2 class="text-xl font-black">Today's Transactions</h2>
                            <p class="text-xs opacity-60 mt-1 font-medium">Real-time activity across selected network.</p>
                        </div>
                        <UiButton Variant="UiButtonVariant.Ghost" Size="UiButtonSize.Sm" OnClick="@(() => NavigationManager.NavigateTo("/report/transaction-history"))">
                            View All <i class="fa-solid fa-arrow-right ml-2 text-[10px]"></i>
                        </UiButton>
                    </div>
                </UiCardHeader>
                <div class="overflow-x-auto">
                    <table class="table table-zebra table-md">
                        <thead>
                            <tr class="text-[10px] uppercase tracking-widest font-black opacity-40">
                                <th>Participant Accounts</th>
                                <th>Type</th>
                                <th class="text-right">Amount (MMK)</th>
                                <th class="text-center">Time</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (RecentTransactions.Any())
                            {
                                @foreach (var tx in RecentTransactions)
                                {
                                    <tr class="hover">
                                        <td>
                                            <div class="flex items-center gap-3">
                                                <div class="avatar placeholder">
                                                    <div class="bg-base-300 text-base-content rounded-lg w-8">
                                                        @if (tx.TransactionType == "Deposit") { <i class="fa-solid fa-arrow-down-long text-[10px]"></i> }
                                                        else if (tx.TransactionType == "Withdraw") { <i class="fa-solid fa-arrow-up-long text-[10px]"></i> }
                                                        else { <i class="fa-solid fa-right-left text-[10px]"></i> }
                                                    </div>
                                                </div>
                                                <div class="flex flex-col">
                                                    <span class="text-sm font-bold font-mono tracking-tight text-primary">@tx.FromAccountNo</span>
                                                    @if (tx.TransactionType == "Transfer")
                                                    {
                                                        <span class="text-[10px] opacity-40 font-mono">→ @tx.ToAccountNo</span>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <UiBadge Variant="@(tx.TransactionType == "Deposit" ? UiBadgeVariant.Success : tx.TransactionType == "Withdraw" ? UiBadgeVariant.Destructive : UiBadgeVariant.Secondary)">
                                                @tx.TransactionType
                                            </UiBadge>
                                        </td>
                                        <td class="text-right font-mono font-black text-sm @(tx.TransactionType == "Deposit" ? "text-success" : "")">
                                            @((tx.TransactionType == "Deposit" ? "+" : "-") + tx.Amount.ToString("N0"))
                                        </td>
                                        <td class="text-center opacity-70 font-bold text-xs">
                                            @tx.TransactionDate.ToString("hh:mm tt")
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="py-24 text-center">
                                        <div class="flex flex-col items-center opacity-20">
                                            <i class="fa-solid fa-box-open text-6xl mb-4"></i>
                                            <p class="text-xl font-black uppercase tracking-widest">No Activity</p>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </UiCard>

            <!-- Side Panels: Quick Actions & System Info -->
            <div class="space-y-6">
                <UiCard>
                    <UiCardHeader>
                        <div class="flex items-center justify-between">
                            <h3 class="text-xs font-black uppercase tracking-widest opacity-60">Quick Actions</h3>
                            <div class="badge badge-warning badge-xs">⚡</div>
                        </div>
                    </UiCardHeader>
                    <UiCardContent Class="space-y-4">
                        <button class="btn btn-outline btn-block justify-start gap-4 border-base-300 hover:border-success hover:bg-success hover:text-success-content group" 
                                @onclick="@(() => NavigationManager.NavigateTo("/transaction/deposit"))">
                            <div class="w-8 h-8 rounded-lg bg-success/10 text-success flex items-center justify-center group-hover:bg-white/20 group-hover:text-white">
                                <i class="fa-solid fa-plus"></i>
                            </div>
                            <span class="font-bold">Cash Deposit</span>
                        </button>
                        <button class="btn btn-outline btn-block justify-start gap-4 border-base-300 hover:border-error hover:bg-error hover:text-error-content group" 
                                @onclick="@(() => NavigationManager.NavigateTo("/transaction/withdraw"))">
                            <div class="w-8 h-8 rounded-lg bg-error/10 text-error flex items-center justify-center group-hover:bg-white/20 group-hover:text-white">
                                <i class="fa-solid fa-minus"></i>
                            </div>
                            <span class="font-bold">Withdrawal</span>
                        </button>
                        <button class="btn btn-outline btn-block justify-start gap-4 border-base-300 hover:border-primary hover:bg-primary hover:text-primary-content group" 
                                @onclick="@(() => NavigationManager.NavigateTo("/transaction/transfer"))">
                            <div class="w-8 h-8 rounded-lg bg-primary/10 text-primary flex items-center justify-center group-hover:bg-white/20 group-hover:text-white">
                                <i class="fa-solid fa-right-left"></i>
                            </div>
                            <span class="font-bold">Internal Transfer</span>
                        </button>
                    </UiCardContent>
                </UiCard>

                <div class="card bg-primary text-primary-content shadow-xl relative overflow-hidden group">
                    <div class="absolute -right-12 -bottom-12 w-48 h-48 bg-white/20 rounded-full blur-3xl group-hover:scale-150 transition-transform duration-700"></div>
                    <div class="card-body relative z-10">
                        <div class="flex items-center gap-3 mb-4">
                            <div class="p-2 bg-white/20 rounded-xl backdrop-blur-md">
                                <i class="fa-solid fa-shield-halved"></i>
                            </div>
                            <span class="text-[10px] font-black uppercase tracking-widest opacity-80">Sync Status</span>
                        </div>
                        <p class="text-sm font-medium leading-relaxed mb-6">
                            Branch-level access is active. Data is synchronized with Local IndexedDB.
                        </p>
                        <div class="card-actions">
                            <button class="btn btn-sm btn-block bg-white/10 border-white/20 hover:bg-white/30 text-white font-bold tracking-widest uppercase">
                                Sync Dashboard
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
