@page "/report/transaction-history"

@{
    int count = 0;
}

@if (_model is not null && _model.Data is not null)
{
    <div class="space-y-6 animate-in fade-in slide-in-from-bottom-2 duration-500">
        <UiPageHeader Title="Transaction History" Subtitle="Review all financial movements across accounts within a selected period.">
            <Actions>
                <div class="flex items-center gap-2">
                    <span class="ui-badge ui-badge-secondary text-[10px] font-bold uppercase tracking-tight">
                        <i class="fa-solid fa-file-invoice mr-1.5 opacity-70"></i>
                        Report
                    </span>
                </div>
            </Actions>
        </UiPageHeader>

        <UiCard>
            <div class="p-6 border-b border-border bg-muted/5">
                <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-4 items-end">
                    <div class="space-y-2">
                        <UiLabel>Start Date</UiLabel>
                        <input type="date" @bind-value="fromDate" 
                               class="ui-input h-10" />
                    </div>
                    <div class="space-y-2">
                        <UiLabel>End Date</UiLabel>
                        <input type="date" @bind-value="toDate" 
                               class="ui-input h-10" />
                    </div>
                    <div class="space-y-2">
                        <UiLabel>Transaction Type</UiLabel>
                        <select class="ui-input h-10" @bind="transactionType">
                            <option value="">All Types</option>
                            <option value="Deposit">Deposit</option>
                            <option value="Withdraw">Withdraw</option>
                            <option value="Transfer">Transfer</option>
                        </select>
                    </div>
                    <div class="lg:col-span-2 flex items-end">
                        <UiButton Variant="UiButtonVariant.Default" Size="UiButtonSize.Default" Class="w-full md:w-auto" OnClick="Search">
                            <i class="fa-solid fa-magnifying-glass mr-2 opacity-70"></i>
                            Search History
                        </UiButton>
                    </div>
                </div>
            </div>

            <div class="p-0 overflow-auto">
                <table class="ui-table">
                    <thead class="ui-table-header">
                        <tr class="ui-table-row">
                            <th class="ui-table-head w-16 text-center">#</th>
                            <th class="ui-table-head">From Account</th>
                            <th class="ui-table-head">To Account</th>
                            <th class="ui-table-head">Date & Time</th>
                            <th class="ui-table-head text-right pr-6">Amount (MMK)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in _model.Data)
                        {
                            count++;
                            int rowNo = count;
                            if (_model.PageSetting is not null)
                            {
                                rowNo += ((_model.PageSetting.PageNo - 1) * _model.PageSetting.PageSize);
                            }
                            <tr class="ui-table-row group">
                                <td class="ui-table-cell text-center text-xs text-muted-foreground font-mono">@rowNo</td>
                                <td class="ui-table-cell">
                                    <div class="flex items-center gap-2">
                                        <div class="w-1.5 h-1.5 rounded-full bg-destructive/50"></div>
                                        <span class="text-xs font-bold font-mono">@item.FromAccountNo</span>
                                    </div>
                                </td>
                                <td class="ui-table-cell">
                                    <div class="flex items-center gap-2">
                                        <div class="w-1.5 h-1.5 rounded-full bg-emerald-500/50"></div>
                                        <span class="text-xs font-bold font-mono">@item.ToAccountNo</span>
                                    </div>
                                </td>
                                <td class="ui-table-cell">
                                    <div class="flex flex-col">
                                        <span class="text-xs font-medium text-slate-700">@item.TransactionDate.ToString("dd MMM yyyy")</span>
                                        <span class="text-[10px] text-muted-foreground font-bold tracking-tight">@item.TransactionDate.ToString("hh:mm tt")</span>
                                    </div>
                                </td>
                                <td class="ui-table-cell text-right pr-6">
                                    <span class="text-xs font-bold font-mono tabular-nums">@item.Amount.ToString("N0")</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!_model.Data.Any())
            {
                <div class="p-12 text-center flex flex-col items-center justify-center">
                    <div class="inline-flex items-center justify-center p-4 bg-muted/50 text-muted-foreground rounded-full mb-4">
                        <i class="fa-solid fa-receipt text-2xl opacity-20"></i>
                    </div>
                    <h3 class="text-sm font-bold">No transactions found</h3>
                    <p class="text-[11px] text-muted-foreground max-w-[200px] mx-auto mt-1">Try adjusting your date range or filters to see results.</p>
                </div>
            }

            @if (_model.PageSetting is not null)
            {
                <div class="p-4 border-t border-border flex flex-col sm:flex-row items-center justify-between gap-4 bg-muted/10">
                    <div class="text-[11px] text-muted-foreground font-medium">
                        Showing page <span class="text-foreground font-bold">@_model.PageSetting.PageNo</span> of <span class="text-foreground font-bold">@_model.PageSetting.PageCount</span>
                    </div>
                    <UiPagination PageNo="@(_model.PageSetting.PageNo)" 
                                  PageCount="@(_model.PageSetting.PageCount)" 
                                  SelectedChanged="PageChanged" />
                </div>
            }
        </UiCard>
    </div>
}
