@page "/report/transaction-history"

@{
    int count = 0;
}

@if (_model is not null && _model.Data is not null)
{
    <div class="page animate-in fade-in slide-in-from-bottom-4 duration-500">
        <UiPageHeader Title="System Transactions" Subtitle="Comprehensive overview of all transaction activity within the system.">
            <Actions>
                <UiBadge Variant="UiBadgeVariant.Secondary" Class="gap-1.5 px-3 py-1.5 rounded-lg text-xs font-bold text-slate-600">
                    <i class="fa-solid fa-layer-group text-slate-400"></i>
                    All Records
                </UiBadge>
            </Actions>
        </UiPageHeader>

        <!-- Filters Section -->
        <div class="card card-body">
            <div class="flex flex-col md:flex-row gap-6 items-end">
                <div class="space-y-1.5 w-full md:w-64">
                    <label class="text-xs font-bold text-slate-500 uppercase tracking-wider ml-1">Filter by Date</label>
                    <input type="date" @onchange="@(e => date = DateTime.Parse(e.Value.ToString()))" 
                           value="@date?.ToString("yyyy-MM-dd")"
                           class="ui-input" />
                </div>
                <UiButton Variant="UiButtonVariant.Default"
                          Class="px-8 shadow-lg shadow-primary-200 group"
                          OnClick="Search">
                    <i class="fa-solid fa-filter mr-2 text-primary-300 group-hover:text-white transition-colors"></i>
                    Refresh List
                </UiButton>
            </div>
        </div>

        <!-- Table Card -->
        <div class="table-card">
            <div class="overflow-x-auto">
                <table class="table">
                    <thead>
                        <tr class="table-head-row">
                            <th class="table-th w-16 text-center">#</th>
                            <th class="table-th">From Account</th>
                            <th class="table-th">To Account</th>
                            <th class="table-th">Transaction Date</th>
                            <th class="table-th text-right">Amount (MMK)</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-100">
                        @foreach (var item in _model.Data)
                        {
                            count++;
                            int rowNo = count;
                            if (_model.PageSetting is not null)
                            {
                                rowNo += ((_model.PageSetting.PageNo - 1) * _model.PageSetting.PageSize);
                            }
                            <tr class="table-row group">
                                <td class="table-td text-sm text-slate-400 font-mono text-center">@rowNo</td>
                                <td class="table-td">
                                    <div class="flex items-center gap-2">
                                        <div class="w-2 h-2 rounded-full bg-slate-300 group-hover:bg-rose-400 transition-colors"></div>
                                        <span class="text-sm font-bold text-slate-900 font-mono">@item.FromAccountNo</span>
                                    </div>
                                </td>
                                <td class="table-td">
                                    <div class="flex items-center gap-2">
                                        <div class="w-2 h-2 rounded-full bg-slate-300 group-hover:bg-emerald-400 transition-colors"></div>
                                        <span class="text-sm font-bold text-slate-900 font-mono">@item.ToAccountNo</span>
                                    </div>
                                </td>
                                <td class="table-td">
                                    <div class="flex flex-col">
                                        <span class="text-sm font-medium text-slate-700 font-mono">@item.TransactionDate.ToString("dd-MMM-yyyy")</span>
                                        <span class="text-[10px] text-slate-400 uppercase font-bold tracking-tighter">@item.TransactionDate.ToString("hh:mm tt")</span>
                                    </div>
                                </td>
                                <td class="table-td text-right">
                                    <span class="text-sm font-black text-slate-900 tabular-nums">@item.Amount.ToString("n0")</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (_model.PageSetting is not null)
            {
                <div class="card-footer flex flex-col sm:flex-row items-center justify-between gap-4">
                    <div class="text-sm text-slate-500 font-medium">
                        Showing page <b>@_model.PageSetting.PageNo</b> of <b>@_model.PageSetting.PageCount</b>
                    </div>
                    <UiPagination PageNo="@(_model.PageSetting.PageNo)" 
                                  PageCount="@(_model.PageSetting.PageCount)" 
                                  SelectedChanged="PageChanged" />
                </div>
            }
        </div>
    </div>
}
