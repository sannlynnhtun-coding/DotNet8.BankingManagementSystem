@page "/user-and-account/user"
@{
    int count = 0;
}

@if (_model is not null && _model.Data is not null)
{
    <div class="space-y-8 animate-in fade-in slide-in-from-bottom-2 duration-500">
        <UiPageHeader Title="Users" Subtitle="Manage application users and their access levels.">
            <Actions>
                <div class="flex gap-2 p-1 bg-base-100 rounded-xl shadow-sm border border-base-300">
                    <UiButton Variant="UiButtonVariant.Ghost" Size="UiButtonSize.Sm" OnClick="Generate">
                        <i class="fa-solid fa-wand-magic-sparkles mr-2 opacity-70"></i>
                        Auto-Gen
                    </UiButton>
                    <UiButton Variant="UiButtonVariant.Default" Size="UiButtonSize.Sm" OnClick="@(() => NavigationManager.NavigateTo("/user-and-account/user/register"))">
                        <i class="fa-solid fa-user-plus mr-2 opacity-70"></i>
                        New User
                    </UiButton>
                </div>
            </Actions>
        </UiPageHeader>

        <UiCard>
            <div class="p-6 bg-base-200/50">
                <div class="flex flex-col md:flex-row gap-4 items-center justify-between">
                    <div class="relative w-full md:w-96 group">
                        <span class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fa-solid fa-magnifying-glass text-base-content/40 group-focus-within:text-primary transition-colors text-xs"></i>
                        </span>
                        <input type="text" 
                               class="input input-bordered input-sm w-full pl-9 focus:input-primary transition-all" 
                               placeholder="Search users..." />
                    </div>
                </div>
            </div>
            
            <div class="overflow-x-auto">
                <table class="table table-zebra table-md">
                    <thead>
                        <tr class="text-[10px] uppercase tracking-widest font-black opacity-40 bg-base-200/30">
                            <th class="w-16 text-center">No.</th>
                            <th>User</th>
                            <th>Customer ID</th>
                            <th>Personal Details</th>
                            <th class="text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in _model.Data)
                        {
                            <tr class="hover group">
                                <td class="text-center opacity-40 font-mono text-xs">
                                    @((++count + ((_model.PageSetting.PageNo - 1) * _model.PageSetting.PageSize)).ToString("D2"))
                                </td>
                                <td>
                                    <div class="flex items-center gap-3">
                                        <div class="avatar placeholder">
                                            <div class="bg-secondary/10 text-secondary rounded-lg w-10 text-xs font-black">
                                                @(string.IsNullOrWhiteSpace(item.UserName)
                                                    ? "?"
                                                    : item.UserName.Substring(0, Math.Min(2, item.UserName.Length)).ToUpperInvariant())
                                            </div>
                                        </div>
                                        <div class="flex flex-col">
                                            <span class="text-sm font-black">@item.UserName</span>
                                            <span class="text-[10px] opacity-40 font-mono font-bold tracking-tight">@item.UserCode</span>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge badge-outline border-base-300 font-mono font-bold text-[10px] opacity-60 px-3 py-3">@item.CustomerId</span>
                                </td>
                                <td>
                                    <div class="flex flex-col">
                                        <span class="text-sm font-black">@item.FullName</span>
                                        <span class="text-[10px] opacity-40 font-bold">@item.Email</span>
                                        <div class="flex items-center gap-1.5 mt-1">
                                            <div class="w-1 h-1 rounded-full bg-primary/40"></div>
                                            <span class="text-[9px] font-black uppercase tracking-widest opacity-40">@item.TownshipCode, @item.StateCode</span>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-right">
                                    <div class="join shadow-sm border border-base-300">
                                        <button class="btn btn-ghost btn-xs join-item" 
                                                @onclick="@(() => NavigationManager.NavigateTo($"/user-and-account/user/edit/{item.UserCode}"))">
                                            <i class="fa-solid fa-user-pen opacity-70"></i>
                                        </button>
                                        <button class="btn btn-ghost btn-xs join-item text-error hover:bg-error hover:text-error-content" 
                                                @onclick="() => Delete(item.UserCode)">
                                            <i class="fa-solid fa-trash opacity-70"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (_model.PageSetting is not null)
            {
                <div class="p-6 bg-base-200/30 flex flex-col md:flex-row items-center justify-between gap-6">
                    <div class="text-[10px] font-black uppercase tracking-widest opacity-40">
                        Page <span class="text-base-content opacity-100">@_model.PageSetting.PageNo</span> of <span class="text-base-content opacity-100">@_model.PageSetting.PageCount</span>
                    </div>
                    <UiPagination PageNo="@(_model.PageSetting.PageNo)" 
                                   PageCount="@(_model.PageSetting.PageCount)" 
                                   SelectedChanged="PageChanged" />
                </div>
            }
        </UiCard>
    </div>
}
