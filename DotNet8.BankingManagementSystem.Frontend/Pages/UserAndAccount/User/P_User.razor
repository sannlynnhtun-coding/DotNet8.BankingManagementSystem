@page "/user-and-account/user"
@{
    int count = 0;
}

@if (_model is not null && _model.Data is not null)
{
    <div class="space-y-6 animate-in fade-in slide-in-from-bottom-2 duration-500">
        <UiPageHeader Title="Users" Subtitle="Manage application users and their access levels.">
            <Actions>
                <UiButton Variant="UiButtonVariant.Outline" Size="UiButtonSize.Sm" OnClick="Generate">
                    <i class="fa-solid fa-wand-magic-sparkles mr-2 opacity-70"></i>
                    Generate
                </UiButton>
                <UiButton Variant="UiButtonVariant.Default" Size="UiButtonSize.Sm" OnClick="@(() => NavigationManager.NavigateTo("/user-and-account/user/register"))">
                    <i class="fa-solid fa-user-plus mr-2 opacity-70"></i>
                    New User
                </UiButton>
            </Actions>
        </UiPageHeader>

        <UiCard>
            <div class="p-4 border-b border-border bg-muted/20">
                <div class="flex flex-col md:flex-row gap-4 items-center justify-between">
                    <div class="relative w-full md:w-80 group">
                        <i class="fa-solid fa-magnifying-glass absolute left-3 top-1/2 -translate-y-1/2 text-muted-foreground text-xs"></i>
                        <input type="search" 
                               class="ui-input pl-9 h-9 text-xs" 
                               placeholder="Search users..."/>
                    </div>
                </div>
            </div>
            
            <div class="p-0 overflow-auto">
                <table class="ui-table">
                    <thead class="ui-table-header">
                        <tr class="ui-table-row">
                            <th class="ui-table-head w-16 text-center">#</th>
                            <th class="ui-table-head">User Info</th>
                            <th class="ui-table-head">Customer ID</th>
                            <th class="ui-table-head">Contact & Location</th>
                            <th class="ui-table-head text-right pr-6">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in _model.Data)
                        {
                            <tr class="ui-table-row group">
                                <td class="ui-table-cell text-center text-xs text-muted-foreground">
                                    @(++count + ((_model.PageSetting.PageNo - 1) * _model.PageSetting.PageSize))
                                </td>
                                <td class="ui-table-cell">
                                    <div class="flex items-center gap-3">
                                        <div class="w-8 h-8 rounded-md bg-muted flex items-center justify-center text-[10px] font-bold">
                                            @(string.IsNullOrWhiteSpace(item.UserName)
                                                ? "?"
                                                : item.UserName.Substring(0, Math.Min(2, item.UserName.Length)).ToUpperInvariant())
                                        </div>
                                        <div class="flex flex-col">
                                            <span class="text-xs font-bold">@item.UserName</span>
                                            <span class="text-[10px] text-muted-foreground font-mono">@item.UserCode</span>
                                        </div>
                                    </div>
                                </td>
                                <td class="ui-table-cell">
                                    <span class="text-xs font-mono font-medium">@item.CustomerId</span>
                                </td>
                                <td class="ui-table-cell">
                                    <div class="flex flex-col">
                                        <span class="text-xs font-semibold">@item.FullName</span>
                                        <span class="text-[10px] text-muted-foreground">@item.Email</span>
                                        <span class="text-[9px] text-muted-foreground flex items-center gap-1 mt-0.5">
                                            <i class="fa-solid fa-location-dot text-[8px]"></i>
                                            @item.TownshipCode, @item.StateCode
                                        </span>
                                    </div>
                                </td>
                                <td class="ui-table-cell text-right pr-4">
                                    <div class="flex justify-end gap-1">
                                        <UiButton Variant="UiButtonVariant.Ghost" Size="UiButtonSize.Icon" 
                                                  OnClick="@(() => NavigationManager.NavigateTo($"/user-and-account/user/edit/{item.UserCode}"))">
                                            <i class="fa-solid fa-user-pen text-xs opacity-70"></i>
                                        </UiButton>
                                        <UiButton Variant="UiButtonVariant.Ghost" Size="UiButtonSize.Icon" 
                                                  Class="hover:bg-destructive/10 hover:text-destructive"
                                                  OnClick="() => Delete(item.UserCode)">
                                            <i class="fa-solid fa-trash text-xs opacity-70"></i>
                                        </UiButton>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="p-4 border-t border-border flex flex-col sm:flex-row items-center justify-between gap-4 bg-muted/10">
                <div class="text-[11px] text-muted-foreground font-medium">
                    Showing page <span class="text-foreground font-bold">@_model.PageSetting.PageNo</span> of <span class="text-foreground font-bold">@_model.PageSetting.PageCount</span>
                </div>
                <UiPagination PageNo="@(_model.PageSetting.PageNo)" 
                               PageCount="@(_model.PageSetting.PageCount)" 
                               SelectedChanged="PageChanged" />
            </div>
        </UiCard>
    </div>
}
