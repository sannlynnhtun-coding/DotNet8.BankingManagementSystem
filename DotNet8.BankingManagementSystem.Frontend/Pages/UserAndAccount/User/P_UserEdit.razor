@page "/user-and-account/user/edit/{userCode}"

@if (_model is not null)
{
    <div class="max-w-2xl mx-auto space-y-8 animate-in fade-in slide-in-from-bottom-2 duration-500">
        <div class="space-y-2">
            <h1 class="text-2xl font-bold tracking-tight">Edit Customer Profile</h1>
            <p class="text-muted-foreground text-sm">Update personal information and contact details for <span class="font-mono font-bold text-foreground">@userCode</span>.</p>
        </div>

        <UiCard>
            <EditForm Model="@_model" OnValidSubmit="OnValidSubmit">
                <DataAnnotationsValidator />
                
                <div class="p-6 space-y-6">
                    <!-- Personal Section -->
                    <div class="space-y-4">
                        <div class="pb-2 border-b">
                            <h4 class="text-sm font-semibold flex items-center gap-2">
                                <i class="fa-solid fa-id-card text-muted-foreground"></i>
                                Personal Information
                            </h4>
                        </div>
                        
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div class="space-y-2">
                                <UiLabel>Full Name</UiLabel>
                                <InputText @bind-Value="_model.FullName" class="ui-input" placeholder="e.g. John Doe" />
                                <ValidationMessage For="@(() => _model.FullName)" class="text-[10px] text-destructive font-medium" />
                            </div>

                            <div class="space-y-2">
                                <UiLabel>User Name</UiLabel>
                                <InputText @bind-Value="_model.UserName" class="ui-input" placeholder="e.g. johndoe_99" />
                                <ValidationMessage For="@(() => _model.UserName)" class="text-[10px] text-destructive font-medium" />
                            </div>

                            <div class="space-y-2 md:col-span-2">
                                <UiLabel>NRC Number</UiLabel>
                                <InputText @bind-Value="_model.Nrc" class="ui-input" placeholder="e.g. 12/YAKANA(N)123456" />
                                <ValidationMessage For="@(() => _model.Nrc)" class="text-[10px] text-destructive font-medium" />
                            </div>
                        </div>
                    </div>

                    <!-- Contact Section -->
                    <div class="space-y-4 pt-2">
                        <div class="pb-2 border-b">
                            <h4 class="text-sm font-semibold flex items-center gap-2">
                                <i class="fa-solid fa-address-book text-muted-foreground"></i>
                                Contact & Location
                            </h4>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div class="space-y-2">
                                <UiLabel>Email Address</UiLabel>
                                <InputText @bind-Value="_model.Email" type="email" class="ui-input" placeholder="john@example.com" />
                                <ValidationMessage For="@(() => _model.Email)" class="text-[10px] text-destructive font-medium" />
                            </div>

                            <div class="space-y-2">
                                <UiLabel>Mobile Number</UiLabel>
                                <InputText @bind-Value="_model.MobileNo" class="ui-input" placeholder="09xxxxxxxxx" />
                                <ValidationMessage For="@(() => _model.MobileNo)" class="text-[10px] text-destructive font-medium" />
                            </div>

                            <div class="space-y-2 md:col-span-2">
                                <UiLabel>Home Address</UiLabel>
                                <InputText @bind-Value="_model.Address" class="ui-input" placeholder="Street, Building, Room..." />
                                <ValidationMessage For="@(() => _model.Address)" class="text-[10px] text-destructive font-medium" />
                            </div>

                            <div class="space-y-2">
                                <UiLabel>State / Division</UiLabel>
                                <select class="ui-input" @onchange="(e) => ChangeState(e.Value?.ToString() ?? string.Empty)">
                                    <option value="">Select State</option>
                                    @if (_stateListResponseModel is not null && _stateListResponseModel.Data is not null)
                                    {
                                        @foreach (var item in _stateListResponseModel.Data)
                                        {
                                            <option value="@item.StateCode" selected="@(item.StateCode == _model.StateCode)">@item.StateName</option>
                                        }
                                    }
                                </select>
                            </div>

                            <div class="space-y-2">
                                <UiLabel>Township</UiLabel>
                                <InputSelect @bind-Value="@_model.TownshipCode" class="ui-input">
                                    <option value="">Select Township</option>
                                    @if (_townshipListResponceModel is not null && _townshipListResponceModel.Data is not null)
                                    {
                                        @foreach (var item in _townshipListResponceModel.Data)
                                        {
                                            <option value="@item.TownshipCode">@item.TownshipName</option>
                                        }
                                    }
                                </InputSelect>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="flex items-center justify-end gap-3 p-6 pt-0">
                    <UiButton Type="button" Variant="UiButtonVariant.Ghost" OnClick="@(() => InjectService.EnableLoading())">
                        Cancel
                    </UiButton>
                    <UiButton Type="submit" Variant="UiButtonVariant.Default">
                        Update Profile
                    </UiButton>
                </div>
            </EditForm>
        </UiCard>
    </div>
}
