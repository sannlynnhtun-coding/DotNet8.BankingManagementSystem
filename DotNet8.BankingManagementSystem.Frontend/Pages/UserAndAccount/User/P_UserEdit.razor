@page "/user-and-account/user/edit/{userCode}"

@if (_model is not null)
{
    <div class="max-w-4xl mx-auto space-y-8 animate-in fade-in slide-in-from-bottom-4 duration-500">
        <!-- Header Section -->
        <div class="text-center space-y-2">
            <div class="inline-flex items-center justify-center p-3 bg-indigo-50 text-indigo-600 rounded-2xl shadow-sm mb-2">
                <i class="fa-solid fa-user-gear text-2xl"></i>
            </div>
            <h1 class="text-3xl font-extrabold text-slate-900 tracking-tight">Edit Customer Profile</h1>
            <p class="text-slate-500 max-w-sm mx-auto">Update personal information and contact details for <b>@userCode</b>.</p>
        </div>

        <!-- Form Card -->
        <div class="card-lg">
            <EditForm Model="@_model">
                <div class="card-body space-y-8">
                    <!-- Grid Layout for Form -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-6">
                        <!-- Column 1: Personal Info -->
                        <div class="space-y-6">
                            <h3 class="text-sm font-black text-slate-400 uppercase tracking-widest flex items-center gap-2">
                                <i class="fa-solid fa-id-card text-xs"></i>
                                Personal Information
                            </h3>
                            
                            <div class="group">
                                <UiLabel>Full Name</UiLabel>
                                <InputText @bind-Value="_model.FullName" 
                                           class="ui-input" 
                                           placeholder="e.g. John Doe" />
                                <ValidationMessage For="@(() => _model.FullName)" class="text-xs text-rose-500 mt-1" />
                            </div>

                            <div class="group">
                                <UiLabel>User Name</UiLabel>
                                <InputText @bind-Value="_model.UserName" 
                                           class="ui-input" 
                                           placeholder="e.g. johndoe_99" />
                                <ValidationMessage For="@(() => _model.UserName)" class="text-xs text-rose-500 mt-1" />
                            </div>

                            <div class="group">
                                <UiLabel>NRC Number</UiLabel>
                                <InputText @bind-Value="_model.Nrc" 
                                           class="ui-input" 
                                           placeholder="e.g. 12/YAKANA(N)123456" />
                                <ValidationMessage For="@(() => _model.Nrc)" class="text-xs text-rose-500 mt-1" />
                            </div>
                        </div>

                        <!-- Column 2: Contact & Location -->
                        <div class="space-y-6">
                            <h3 class="text-sm font-black text-slate-400 uppercase tracking-widest flex items-center gap-2">
                                <i class="fa-solid fa-address-book text-xs"></i>
                                Contact & Location
                            </h3>

                            <div class="group">
                                <UiLabel>Email Address</UiLabel>
                                <InputText @bind-Value="_model.Email" 
                                           type="email"
                                           class="ui-input" 
                                           placeholder="john@example.com" />
                                <ValidationMessage For="@(() => _model.Email)" class="text-xs text-rose-500 mt-1" />
                            </div>

                            <div class="group">
                                <UiLabel>Mobile Number</UiLabel>
                                <InputText @bind-Value="_model.MobileNo" 
                                           class="ui-input" 
                                           placeholder="09xxxxxxxxx" />
                                <ValidationMessage For="@(() => _model.MobileNo)" class="text-xs text-rose-500 mt-1" />
                            </div>

                            <div class="group">
                                <UiLabel>Home Address</UiLabel>
                                <InputText @bind-Value="_model.Address" 
                                           class="ui-input" 
                                           placeholder="Street, Building, Room..." />
                                <ValidationMessage For="@(() => _model.Address)" class="text-xs text-rose-500 mt-1" />
                            </div>
                        </div>

                        <!-- Full Width: Geographic Info -->
                        <div class="md:col-span-2 grid grid-cols-1 md:grid-cols-2 gap-6 pt-4 border-t border-slate-100">
                            <div class="group">
                                <UiLabel>State / Division</UiLabel>
                                <select class="ui-input" @onchange="(e) => ChangeState(e.Value?.ToString() ?? string.Empty)">
                                    <option value="">Select State</option>
                                    @if (_stateListResponseModel is not null && _stateListResponseModel.Data is not null)
                                    {
                                        @foreach (var item in _stateListResponseModel.Data)
                                        {
                                            <option value="@item.StateCode" selected="@(item.StateCode == _model.StateCode)">@item.StateName</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="group">
                                <UiLabel>Township</UiLabel>
                                <InputSelect @bind-Value="@_model.TownshipCode" class="ui-input">
                                    <option value="">Select Township</option>
                                    @if (_townshipListResponceModel is not null && _townshipListResponceModel.Data is not null)
                                    {
                                        @foreach (var item in _townshipListResponceModel.Data)
                                        {
                                            <option value="@item.TownshipCode">@item.TownshipName</option>
                                        }
                                    }
                                </InputSelect>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Action Bar -->
                <div class="card-footer flex flex-col sm:flex-row gap-3 px-8 py-6 bg-slate-50">
                    <UiButton Type="button"
                              OnClick="@(() => InjectService.EnableLoading())"
                              Variant="UiButtonVariant.Secondary"
                              Size="UiButtonSize.Lg"
                              Class="flex-1 px-6 font-bold">
                        Cancel
                    </UiButton>
                    <UiButton Type="submit"
                              OnClick="OnValidSubmit"
                              Variant="UiButtonVariant.Default"
                              Size="UiButtonSize.Lg"
                              Class="flex-[2] px-6 font-bold bg-indigo-600 hover:bg-indigo-700 shadow-lg shadow-indigo-200 group">
                        Update Profile
                        <i class="fa-solid fa-floppy-disk ml-2 text-indigo-300 group-hover:scale-110 transition-transform"></i>
                    </UiButton>
                </div>
            </EditForm>
        </div>
    </div>
}
