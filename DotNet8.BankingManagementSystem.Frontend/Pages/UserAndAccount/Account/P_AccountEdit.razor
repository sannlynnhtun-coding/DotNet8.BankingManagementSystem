@page "/user-and-account/account/edit/{accountNo}"

@if (_model is not null)
{
    <div class="max-w-2xl mx-auto space-y-8 animate-in fade-in slide-in-from-bottom-4 duration-500">
        <!-- Header Section -->
        <div class="text-center space-y-2">
            <div class="inline-flex items-center justify-center p-3 bg-indigo-50 text-indigo-600 rounded-2xl shadow-sm mb-2">
                <i class="fa-solid fa-user-pen text-2xl"></i>
            </div>
            <h1 class="text-3xl font-extrabold text-slate-900 tracking-tight">Edit Account</h1>
            <p class="text-slate-500 max-w-sm mx-auto">Modify details for account number <b>@AccountNo</b>.</p>
        </div>

        <!-- Form Card -->
        <div class="card-lg">
            <EditForm Model="@_model">
                <div class="card-body space-y-6">
                    <!-- Inputs Group -->
                    <div class="space-y-4">
                        <div class="group opacity-70">
                            <UiLabel>Customer Code</UiLabel>
                            <InputText @bind-Value="_model.CustomerCode" 
                                       class="ui-input bg-slate-50 border-slate-200 text-slate-500 cursor-not-allowed shadow-none" 
                                       readonly="true" />
                        </div>

                        <div class="group">
                            <UiLabel>Account Balance (MMK)</UiLabel>
                            <InputNumber @bind-Value="_model.Balance" 
                                         class="ui-input" 
                                         placeholder="0.00" />
                            <ValidationMessage For="@(() => _model.Balance)" class="text-xs text-rose-500 mt-1" />
                        </div>
                    </div>
                </div>

                <!-- Action Bar -->
                <div class="card-footer flex flex-col sm:flex-row gap-3 px-8 py-6 bg-slate-50">
                    <UiButton Href="/user-and-account/account"
                              Variant="UiButtonVariant.Secondary"
                              Size="UiButtonSize.Lg"
                              Class="flex-1 px-6 font-bold">
                        Cancel
                    </UiButton>
                    <UiButton Type="submit"
                              OnClick="OnValidSubmit"
                              Variant="UiButtonVariant.Default"
                              Size="UiButtonSize.Lg"
                              Class="flex-[2] px-6 font-bold bg-indigo-600 hover:bg-indigo-700 shadow-lg shadow-indigo-200 group">
                        Save Changes
                        <i class="fa-solid fa-floppy-disk ml-2 text-indigo-300 group-hover:scale-110 transition-transform"></i>
                    </UiButton>
                </div>
            </EditForm>
        </div>
    </div>
}
