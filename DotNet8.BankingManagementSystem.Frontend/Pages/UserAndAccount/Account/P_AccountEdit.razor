@page "/user-and-account/account/edit/{accountNo}"

@if (_model is not null)
{
    <div class="max-w-2xl mx-auto space-y-8 animate-in fade-in slide-in-from-bottom-2 duration-500">
        <div class="space-y-2">
            <h1 class="text-2xl font-bold tracking-tight">Edit Account</h1>
            <p class="text-muted-foreground text-sm">Modify details for account number <span class="font-mono font-bold text-foreground">@AccountNo</span>.</p>
        </div>

        <UiCard>
            <EditForm Model="@_model" OnValidSubmit="OnValidSubmit">
                <DataAnnotationsValidator />
                
                <div class="p-6 space-y-6">
                    <div class="grid grid-cols-1 gap-4">
                        <div class="space-y-2">
                            <UiLabel>Customer Code</UiLabel>
                            <div class="ui-input bg-muted/50 text-muted-foreground cursor-not-allowed select-none flex items-center px-3 h-10 rounded-md border border-input text-sm">
                                @_model.CustomerCode
                            </div>
                        </div>

                        <div class="space-y-2">
                            <UiLabel>Account Balance (MMK)</UiLabel>
                            <InputNumber @bind-Value="_model.Balance" 
                                         class="ui-input" 
                                         placeholder="0.00" />
                            <ValidationMessage For="@(() => _model.Balance)" class="text-[10px] text-destructive font-medium" />
                        </div>
                    </div>
                </div>

                <div class="flex items-center justify-end gap-3 p-6 pt-0">
                    <UiButton Type="button" Variant="UiButtonVariant.Ghost" OnClick="@(() => NavigationManager.NavigateTo("/user-and-account/account"))">
                        Cancel
                    </UiButton>
                    <UiButton Type="submit" Variant="UiButtonVariant.Default">
                        Save Changes
                    </UiButton>
                </div>
            </EditForm>
        </UiCard>
    </div>
}
