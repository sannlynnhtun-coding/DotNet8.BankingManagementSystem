@page "/user-and-account/account/create"

<div class="max-w-2xl mx-auto space-y-8 animate-in fade-in slide-in-from-bottom-2 duration-500">
    <div class="space-y-2">
        <h1 class="text-2xl font-bold tracking-tight">Open New Account</h1>
        <p class="text-muted-foreground text-sm">Create a new financial account for a registered customer.</p>
    </div>

    <UiCard>
        <EditForm Model="@_model" OnValidSubmit="OnValidSubmit">
            <DataAnnotationsValidator />
            
            <div class="p-6 space-y-6">
                <!-- Inputs Group -->
                <div class="grid grid-cols-1 gap-4">
                    <div class="space-y-2">
                        <UiLabel>Select Customer</UiLabel>
                        <InputSelect @bind-Value="_model.CustomerCode" class="ui-input">
                            <option value="">Choose a customer</option>
                            @if (_userListResponseModel is not null && _userListResponseModel.Data is not null && _accountListResponseModel is not null && _accountListResponseModel.Data is not null)
                            {
                                string[] userCodes = _accountListResponseModel.Data.Select(x => x.CustomerCode).ToArray();
                                @foreach (var item in _userListResponseModel.Data
                                    .Where(x => !userCodes.Contains(x.UserCode))
                                    .OrderBy(x => x.FullName))
                                {
                                    <option value="@item.UserCode">
                                        @item.FullName (@item.MobileNo)
                                    </option>
                                }
                            }
                        </InputSelect>
                        <ValidationMessage For="@(() => _model.CustomerCode)" class="text-[10px] text-destructive font-medium" />
                    </div>

                    <div class="space-y-2">
                        <UiLabel>Initial Balance (MMK)</UiLabel>
                        <InputNumber @bind-Value="_model.Balance" 
                                     class="ui-input" 
                                     placeholder="0.00" />
                        <ValidationMessage For="@(() => _model.Balance)" class="text-[10px] text-destructive font-medium" />
                    </div>
                </div>

                <UiAlert Variant="UiAlertVariant.Info" Class="bg-primary/5 border-primary/10">
                    <i class="fa-solid fa-circle-info text-primary"></i>
                    <span class="text-xs font-medium">A unique account number will be automatically generated upon creation.</span>
                </UiAlert>
            </div>

            <div class="flex items-center justify-end gap-3 p-6 pt-0">
                <UiButton Type="button" Variant="UiButtonVariant.Ghost" OnClick="@(() => NavigationManager.NavigateTo("/user-and-account/account"))">
                    Cancel
                </UiButton>
                <UiButton Type="submit" Variant="UiButtonVariant.Default">
                    Create Account
                </UiButton>
            </div>
        </EditForm>
    </UiCard>
</div>
