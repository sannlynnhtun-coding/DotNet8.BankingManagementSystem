@page "/user-and-account/account/create"

<div class="max-w-2xl mx-auto space-y-8 animate-in fade-in slide-in-from-bottom-4 duration-500">
    <!-- Header Section -->
    <div class="text-center space-y-2">
        <div class="inline-flex items-center justify-center p-3 bg-primary-50 text-primary-600 rounded-2xl shadow-sm mb-2">
            <i class="fa-solid fa-file-invoice-dollar text-2xl"></i>
        </div>
        <h1 class="text-3xl font-extrabold text-slate-900 tracking-tight">Open New Account</h1>
        <p class="text-slate-500 max-w-sm mx-auto">Create a new financial account for a registered customer.</p>
    </div>

    <!-- Form Card -->
    <div class="card-lg">
        <EditForm Model="@_model" OnValidSubmit="OnValidSubmit">
            <div class="card-body space-y-6">
                <!-- Inputs Group -->
                <div class="space-y-4">
                    <div class="group">
                        <UiLabel>Select Customer</UiLabel>
                        <InputSelect @bind-Value="_model.CustomerCode" class="ui-input">
                            <option value="">Choose a customer</option>
                            @if (_userListResponseModel is not null && _userListResponseModel.Data is not null && _accountListResponseModel is not null && _accountListResponseModel.Data is not null)
                            {
                                string[] userCodes = _accountListResponseModel.Data.Select(x => x.CustomerCode).ToArray();
                                @foreach (var item in _userListResponseModel.Data
                                    .Where(x => !userCodes.Contains(x.UserCode))
                                    .OrderBy(x => x.FullName))
                                {
                                    <option value="@item.UserCode">
                                        @item.FullName (@item.MobileNo)
                                    </option>
                                }
                            }
                        </InputSelect>
                    </div>

                    <div class="group">
                        <UiLabel>Initial Balance (MMK)</UiLabel>
                        <InputNumber @bind-Value="_model.Balance" 
                                     class="ui-input" 
                                     placeholder="0.00" />
                        <ValidationMessage For="@(() => _model.Balance)" class="text-xs text-rose-500 mt-1" />
                    </div>
                </div>

                <!-- Info Box -->
                <UiAlert Variant="UiAlertVariant.Info">
                    <Icon>
                        <i class="fa-solid fa-circle-right text-primary-500"></i>
                    </Icon>
                    <ChildContent>
                        <p class="text-xs text-slate-700 leading-relaxed font-medium">
                            A unique account number will be automatically generated upon successful creation.
                        </p>
                    </ChildContent>
                </UiAlert>
            </div>

            <!-- Action Bar -->
            <div class="card-footer flex flex-col sm:flex-row gap-3 px-8 py-6 bg-slate-50">
                <UiButton Href="/user-and-account/account"
                          Variant="UiButtonVariant.Secondary"
                          Size="UiButtonSize.Lg"
                          Class="flex-1 px-6 font-bold">
                    Cancel
                </UiButton>
                <UiButton Type="submit"
                          Variant="UiButtonVariant.Default"
                          Size="UiButtonSize.Lg"
                          Class="flex-[2] px-6 font-bold shadow-lg shadow-primary-200 group">
                    Create Account
                    <i class="fa-solid fa-plus-circle ml-2 text-primary-300 group-hover:rotate-90 transition-transform"></i>
                </UiButton>
            </div>
        </EditForm>
    </div>
</div>
