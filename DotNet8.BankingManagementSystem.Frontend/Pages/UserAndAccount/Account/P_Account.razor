@page "/user-and-account/account"
@{
    int count = 0;
}

@if (_model is not null && _model.Data is not null)
{
    <div class="space-y-6 animate-in fade-in slide-in-from-bottom-2 duration-500">
        <UiPageHeader Title="Accounts" Subtitle="Manage and monitor system-wide bank accounts.">
            <Actions>
                <UiButton Variant="UiButtonVariant.Outline" Size="UiButtonSize.Sm" OnClick="() => List(1, 10)">
                    <i class="fa-solid fa-rotate mr-2 opacity-70"></i>
                    Reload
                </UiButton>
                <UiButton Variant="UiButtonVariant.Default" Size="UiButtonSize.Sm" OnClick="@(() => NavigationManager.NavigateTo("/user-and-account/account/create"))">
                    <i class="fa-solid fa-plus mr-2 opacity-70"></i>
                    New Account
                </UiButton>
            </Actions>
        </UiPageHeader>

        <UiCard>
            <div class="p-4 border-b border-border bg-muted/20">
                <div class="flex flex-col md:flex-row gap-4 items-center justify-between">
                    <div class="relative w-full md:w-80 group">
                        <i class="fa-solid fa-magnifying-glass absolute left-3 top-1/2 -translate-y-1/2 text-muted-foreground text-xs"></i>
                        <input type="search" 
                               class="ui-input pl-9 h-9 text-xs" 
                               placeholder="Search account number..."/>
                    </div>
                </div>
            </div>
            
            <div class="p-0 overflow-auto">
                <table class="ui-table">
                    <thead class="ui-table-header">
                        <tr class="ui-table-row">
                            <th class="ui-table-head w-16 text-center">#</th>
                            <th class="ui-table-head">Account Details</th>
                            <th class="ui-table-head">Customer</th>
                            <th class="ui-table-head">Balance</th>
                            <th class="ui-table-head text-right pr-6">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in _model.Data)
                        {
                            var result = _users.Data.FirstOrDefault(x => x.UserCode == item.CustomerCode);
                            <tr class="ui-table-row group">
                                <td class="ui-table-cell text-center text-xs text-muted-foreground">
                                    @(++count + ((_model.PageSetting.PageNo - 1) * _model.PageSetting.PageSize))
                                </td>
                                <td class="ui-table-cell">
                                    <div class="flex items-center gap-2">
                                        <div class="w-8 h-8 rounded bg-primary/10 text-primary flex items-center justify-center">
                                            <i class="fa-solid fa-building-columns text-[10px]"></i>
                                        </div>
                                        <span class="text-xs font-bold font-mono tracking-tight">@item.AccountNo</span>
                                    </div>
                                </td>
                                <td class="ui-table-cell">
                                    <div class="flex flex-col">
                                        <span class="text-xs font-semibold">@(result?.FullName ?? "N/A")</span>
                                        <span class="text-[10px] text-muted-foreground">@(result?.MobileNo ?? "N/A")</span>
                                    </div>
                                </td>
                                <td class="ui-table-cell">
                                    <div class="flex flex-col">
                                        <span class="text-xs font-bold tabular-nums">@item.Balance.ToString("N0")</span>
                                        <span class="text-[9px] text-muted-foreground uppercase font-bold tracking-widest">MMK</span>
                                    </div>
                                </td>
                                <td class="ui-table-cell text-right pr-4">
                                    <div class="flex justify-end gap-1">
                                        <UiButton Variant="UiButtonVariant.Ghost" Size="UiButtonSize.Icon" 
                                                  OnClick="@(() => NavigationManager.NavigateTo($"/user-and-account/account{item.AccountNo}"))">
                                            <i class="fa-solid fa-pen-to-square text-xs opacity-70"></i>
                                        </UiButton>
                                        <UiButton Variant="UiButtonVariant.Ghost" Size="UiButtonSize.Icon" 
                                                  Class="hover:bg-destructive/10 hover:text-destructive"
                                                  OnClick="() => IsConfirmed(item.AccountNo)">
                                            <i class="fa-solid fa-trash text-xs opacity-70"></i>
                                        </UiButton>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="p-4 border-t border-border flex flex-col sm:flex-row items-center justify-between gap-4 bg-muted/10">
                <div class="text-[11px] text-muted-foreground font-medium">
                    Showing page <span class="text-foreground font-bold">@_model.PageSetting.PageNo</span> of <span class="text-foreground font-bold">@_model.PageSetting.PageCount</span>
                </div>
                <UiPagination PageNo="@(_model.PageSetting.PageNo)" 
                               PageCount="@(_model.PageSetting.PageCount)" 
                               SelectedChanged="PageChanged" />
            </div>
        </UiCard>
    </div>
}

