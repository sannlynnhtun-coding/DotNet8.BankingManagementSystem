@page "/user-and-account/account"
@{
    int count = 0;
}

@if (_model is not null && _model.Data is not null)
{
    <div class="space-y-8 animate-in fade-in slide-in-from-bottom-2 duration-500">
        <UiPageHeader Title="Accounts" Subtitle="Manage and monitor system-wide bank accounts.">
            <Actions>
                <div class="flex gap-2 p-1 bg-base-100 rounded-xl shadow-sm border border-base-300">
                    <UiButton Variant="UiButtonVariant.Ghost" Size="UiButtonSize.Sm" OnClick="() => List(1, 10)">
                        <i class="fa-solid fa-rotate mr-2 opacity-70"></i>
                        Reload
                    </UiButton>
                    <UiButton Variant="UiButtonVariant.Default" Size="UiButtonSize.Sm" OnClick="@(() => NavigationManager.NavigateTo("/user-and-account/account/create"))">
                        <i class="fa-solid fa-plus mr-2 opacity-70"></i>
                        New Account
                    </UiButton>
                </div>
            </Actions>
        </UiPageHeader>

        <UiCard>
            <div class="p-6 bg-base-200/50">
                <div class="flex flex-col md:flex-row gap-4 items-center justify-between">
                    <div class="relative w-full md:w-96 group">
                        <span class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fa-solid fa-magnifying-glass text-base-content/40 group-focus-within:text-primary transition-colors text-xs"></i>
                        </span>
                        <input type="text"
                               class="input input-bordered input-sm w-full pl-9 focus:input-primary transition-all"
                               placeholder="Search account number..." />
                    </div>
                </div>
            </div>
            
            <div class="overflow-x-auto">
                <table class="table table-zebra table-md">
                    <thead>
                        <tr class="text-[10px] uppercase tracking-widest font-black opacity-40 bg-base-200/30">
                            <th class="w-16 text-center">No.</th>
                            <th>Account</th>
                            <th>Customer</th>
                            <th>Balance</th>
                            <th class="text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in _model.Data)
                        {
                            var result = _users.Data.FirstOrDefault(x => x.UserCode == item.CustomerCode);
                            <tr class="hover group">
                                <td class="text-center opacity-40 font-mono text-xs">
                                    @((++count + ((_model.PageSetting.PageNo - 1) * _model.PageSetting.PageSize)).ToString("D2"))
                                </td>
                                <td>
                                    <div class="flex items-center gap-3">
                                        <div class="avatar placeholder">
                                            <div class="bg-primary/10 text-primary rounded-lg w-10">
                                                <i class="fa-solid fa-building-columns"></i>
                                            </div>
                                        </div>
                                        <span class="text-sm font-bold font-mono tracking-tight text-primary">@item.AccountNo</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="flex flex-col">
                                        <span class="text-sm font-black">@(result?.FullName ?? "N/A")</span>
                                        <span class="text-[10px] opacity-40 font-bold">@(result?.MobileNo ?? "N/A")</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="flex flex-col">
                                        <span class="text-sm font-black tabular-nums">@item.Balance.ToString("N0")</span>
                                        <span class="text-[10px] opacity-40 font-black uppercase tracking-widest">MMK</span>
                                    </div>
                                </td>
                                <td class="text-right">
                                    <div class="join shadow-sm border border-base-300">
                                        <button class="btn btn-ghost btn-xs join-item" 
                                                @onclick="@(() => NavigationManager.NavigateTo($"/user-and-account/account{item.AccountNo}"))">
                                            <i class="fa-solid fa-pen-to-square opacity-70"></i>
                                        </button>
                                        <button class="btn btn-ghost btn-xs join-item text-error hover:bg-error hover:text-error-content" 
                                                @onclick="() => IsConfirmed(item.AccountNo)">
                                            <i class="fa-solid fa-trash opacity-70"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (_model.PageSetting is not null)
            {
                <div class="p-6 bg-base-200/30 flex flex-col md:flex-row items-center justify-between gap-6">
                    <div class="text-[10px] font-black uppercase tracking-widest opacity-40">
                        Page <span class="text-base-content opacity-100">@_model.PageSetting.PageNo</span> of <span class="text-base-content opacity-100">@_model.PageSetting.PageCount</span>
                    </div>
                    <UiPagination PageNo="@(_model.PageSetting.PageNo)" 
                                   PageCount="@(_model.PageSetting.PageCount)" 
                                   SelectedChanged="PageChanged" />
                </div>
            }
        </UiCard>
    </div>
}

