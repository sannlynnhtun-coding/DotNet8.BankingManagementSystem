@page "/user-and-account/account"
@{
    int count = 0;
}

@if (_model is not null && _model.Data is not null)
{
    <div class="page animate-in fade-in slide-in-from-bottom-4 duration-500">
        <UiPageHeader Title="Bank Accounts" Subtitle="Monitor customer account balances and managed account details.">
            <Actions>
                <UiButton Href="/user-and-account/account/create"
                          OnClick="() => InjectService.IntervalLoading()"
                          Variant="UiButtonVariant.Default"
                          Class="group">
                    <i class="fa-solid fa-plus-circle mr-2 text-primary-200 group-hover:text-white transition-colors"></i>
                    New Account
                </UiButton>
                <GenerateButton Name="Reload" OnClick="() => List(1, 10)" />
            </Actions>
        </UiPageHeader>

        <!-- Filters & Quick Actions Card -->
        <div class="card card-body-sm">
            <div class="flex flex-col md:flex-row gap-4 items-center justify-between">
                <div class="relative w-full md:w-96 group">
                    <span class="absolute inset-y-0 left-0 pl-3.5 flex items-center pointer-events-none">
                        <i class="fa-solid fa-magnifying-glass text-slate-400 group-focus-within:text-primary-500 transition-colors"></i>
                    </span>
                    <input type="search" 
                           class="ui-input pl-10" 
                           placeholder="Search by account number..."/>
                </div>
            </div>
        </div>

        <!-- Data Table Card -->
        <div class="table-card">
            <div class="overflow-x-auto">
                <table class="table">
                    <thead>
                        <tr class="table-head-row">
                            <th class="table-th w-16">#</th>
                            <th class="table-th">Account Number</th>
                            <th class="table-th">Customer Name</th>
                            <th class="table-th">Mobile</th>
                            <th class="table-th">Balance</th>
                            <th class="table-th text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-100">
                        @foreach (var item in _model.Data)
                        {
                            var result = _users.Data.FirstOrDefault(x => x.UserCode == item.CustomerCode);
                            <tr class="table-row group">
                                <td class="table-td text-sm text-slate-500">
                                    @(++count + ((_model.PageSetting.PageNo - 1) * _model.PageSetting.PageSize))
                                </td>
                                <td class="table-td">
                                    <div class="flex items-center gap-2">
                                        <div class="p-1.5 bg-primary-50 text-primary-600 rounded-lg">
                                            <i class="fa-solid fa-building-columns text-xs"></i>
                                        </div>
                                        <span class="text-sm font-bold text-slate-900 font-mono tracking-wider">@item.AccountNo</span>
                                    </div>
                                </td>
                                <td class="table-td">
                                    <span class="text-sm font-medium text-slate-700">@(result?.FullName ?? "N/A")</span>
                                </td>
                                <td class="table-td">
                                    <span class="text-xs text-slate-500">@(result?.MobileNo ?? "N/A")</span>
                                </td>
                                <td class="table-td">
                                    <div class="inline-flex items-center gap-1.5 text-sm font-bold text-slate-900">
                                        <span class="text-slate-400 font-normal">MMK</span>
                                        @item.Balance.ToString("n0")
                                    </div>
                                </td>
                                <td class="table-td text-right">
                                    <div class="action-cell">
                                        <a href=@($"/user-and-account/account{item.AccountNo}") 
                                           class="action-btn action-btn-edit"
                                           title="Edit Account">
                                            <i class="fa-solid fa-pen-to-square"></i>
                                        </a>
                                        <button type="button" 
                                                class="action-btn action-btn-delete"
                                                @onclick="() => IsConfirmed(item.AccountNo)"
                                                title="Delete Account">
                                            <i class="fa-solid fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination Container -->
            <div class="card-footer flex flex-col sm:flex-row items-center justify-between gap-4">
                <div class="text-sm text-slate-500">
                    Showing page <b>@_model.PageSetting.PageNo</b> of <b>@_model.PageSetting.PageCount</b>
                </div>
                <UiPagination PageNo="@(_model.PageSetting.PageNo)" 
                              PageCount="@(_model.PageSetting.PageCount)" 
                              SelectedChanged="PageChanged" />
            </div>
        </div>
    </div>
}

