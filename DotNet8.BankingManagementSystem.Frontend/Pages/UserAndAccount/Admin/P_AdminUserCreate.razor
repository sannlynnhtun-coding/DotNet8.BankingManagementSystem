@page "/user-and-account/admin-user/create"

<div class="max-w-2xl mx-auto space-y-8 animate-in fade-in slide-in-from-bottom-4 duration-500">
    <!-- Header Section -->
    <div class="text-center space-y-2">
        <div class="inline-flex items-center justify-center p-3 bg-slate-100 text-slate-900 rounded-2xl shadow-sm mb-2 border border-slate-200">
            <i class="fa-solid fa-shield-halved text-2xl"></i>
        </div>
        <h1 class="text-3xl font-extrabold text-slate-900 tracking-tight">Add Admin Staff</h1>
        <p class="text-slate-500 max-w-sm mx-auto">Create a new administrative user with specific access roles.</p>
    </div>

    <!-- Form Card -->
    <div class="card-lg">
        <EditForm Model="@_model" OnValidSubmit="OnValidSubmit">
            <div class="card-body space-y-6">
                <!-- Inputs Group -->
                <div class="space-y-4">
                    <div class="group">
                        <label class="block text-sm font-bold text-slate-700 mb-1.5 ml-1">Staff Access Code</label>
                        <InputText @bind-Value="_model.AdminUserCode" 
                                   class="search-input" 
                                   placeholder="e.g. ADM-001" />
                        <ValidationMessage For="@(() => _model.AdminUserCode)" class="text-xs text-rose-500 mt-1" />
                    </div>

                    <div class="group">
                        <label class="block text-sm font-bold text-slate-700 mb-1.5 ml-1">Staff Full Name</label>
                        <InputText @bind-Value="_model.AdminUserName" 
                                   class="search-input" 
                                   placeholder="e.g. Admin Supervisor" />
                        <ValidationMessage For="@(() => _model.AdminUserName)" class="text-xs text-rose-500 mt-1" />
                    </div>

                    <div class="group">
                        <label class="block text-sm font-bold text-slate-700 mb-1.5 ml-1">Contact Number</label>
                        <InputText @bind-Value="_model.MobileNo" 
                                   class="search-input" 
                                   placeholder="09xxxxxxxxx" />
                        <ValidationMessage For="@(() => _model.MobileNo)" class="text-xs text-rose-500 mt-1" />
                    </div>

                    <div class="group">
                        <label class="block text-sm font-bold text-slate-700 mb-1.5 ml-1">Assigned Role Code</label>
                        <InputText @bind-Value="_model.UserRoleCode" 
                                   class="search-input" 
                                   placeholder="e.g. ROLE_SUPER" />
                        <ValidationMessage For="@(() => _model.UserRoleCode)" class="text-xs text-rose-500 mt-1" />
                    </div>
                </div>
            </div>

            <!-- Action Bar -->
            <div class="card-footer flex flex-col sm:flex-row gap-3 px-8 py-6 bg-slate-50">
                <a href="/user-and-account/admin-user" 
                   class="btn btn-secondary flex-1 px-6 py-3 font-bold">
                    Cancel
                </a>
                <button type="submit" 
                        class="btn flex-[2] px-6 py-3 font-bold bg-slate-900 hover:bg-slate-800 text-white shadow-lg shadow-slate-200 transition-all duration-200 group">
                    Create Admin Staff
                    <i class="fa-solid fa-user-shield ml-2 text-slate-400 group-hover:text-white transition-colors"></i>
                </button>
            </div>
        </EditForm>
    </div>
</div>
