@page "/user-and-account/admin-user/create"

<div class="max-w-2xl mx-auto space-y-8 animate-in fade-in slide-in-from-bottom-2 duration-500">
    <div class="space-y-2">
        <h1 class="text-2xl font-bold tracking-tight">Add Admin Staff</h1>
        <p class="text-muted-foreground text-sm">Create a new administrative user with specific access roles.</p>
    </div>

    <UiCard>
        <EditForm Model="@_model" OnValidSubmit="OnValidSubmit">
            <DataAnnotationsValidator />
            
            <div class="p-6 space-y-6">
                <!-- Inputs Group -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="space-y-2">
                        <UiLabel>Staff Access Code</UiLabel>
                        <InputText @bind-Value="_model.AdminUserCode" 
                                   class="ui-input" 
                                   placeholder="e.g. ADM-001" />
                        <ValidationMessage For="@(() => _model.AdminUserCode)" class="text-[10px] text-destructive font-medium" />
                    </div>

                    <div class="space-y-2">
                        <UiLabel>Staff Full Name</UiLabel>
                        <InputText @bind-Value="_model.AdminUserName" 
                                   class="ui-input" 
                                   placeholder="e.g. Admin Supervisor" />
                        <ValidationMessage For="@(() => _model.AdminUserName)" class="text-[10px] text-destructive font-medium" />
                    </div>

                    <div class="space-y-2">
                        <UiLabel>Contact Number</UiLabel>
                        <InputText @bind-Value="_model.MobileNo" 
                                   class="ui-input" 
                                   placeholder="09xxxxxxxxx" />
                        <ValidationMessage For="@(() => _model.MobileNo)" class="text-[10px] text-destructive font-medium" />
                    </div>

                    <div class="space-y-2">
                        <UiLabel>Assigned Role Code</UiLabel>
                        <InputText @bind-Value="_model.UserRoleCode" 
                                   class="ui-input" 
                                   placeholder="e.g. ROLE_SUPER" />
                        <ValidationMessage For="@(() => _model.UserRoleCode)" class="text-[10px] text-destructive font-medium" />
                    </div>
                </div>
            </div>

            <div class="flex items-center justify-end gap-3 p-6 pt-0">
                <UiButton Type="button" Variant="UiButtonVariant.Ghost" OnClick="@(() => NavigationManager.NavigateTo("/user-and-account/admin-user"))">
                    Cancel
                </UiButton>
                <UiButton Type="submit" Variant="UiButtonVariant.Default">
                    Create Admin Staff
                </UiButton>
            </div>
        </EditForm>
    </UiCard>
</div>
